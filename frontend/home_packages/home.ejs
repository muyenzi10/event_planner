    <style>
        :root {
            --gold-primary: #D4AF37;
            --gold-secondary: #FFD700;
            --gold-light: #FFF8E7;
            --rose-gold: #B76E79;
            --dark-bg: #0a0a0a;
            --darker-bg: #050505;
            --dark-card: #1a1a1a;
        }

        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #fefefe;
            overflow-x: hidden;
            line-height: 1.6;
        }

        /* Back to Top Button */
        .back-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--gold-primary) 0%, var(--gold-secondary) 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #000;
            font-size: 1.2rem;
            cursor: pointer;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
            border: none;
        }

        .back-to-top.visible {
            opacity: 1;
            visibility: visible;
        }

        .back-to-top:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
        }

        /* ============ VIDEO HERO ============ */
        .video-hero {
            position: relative;
            width: 100%;
            height: 100vh;
            min-height: 600px;
            overflow: hidden;
            background: #000;
        }

        .video-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                135deg,
                rgba(183, 110, 121, 0.2) 0%,
                rgba(32, 32, 32, 0.55) 40%,
                rgba(32, 32, 32, 0.65) 50%,
                rgba(32, 32, 32, 0.55) 60%,
                rgba(212, 175, 55, 0.2) 100%
            );
            z-index: 2;
        }

        .video-hero video {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: translate(-50%, -50%);
            z-index: 1;
        }

        /* ============ HEART BADGE ABOVE HERO CONTENT ============ */
        .heart-badge-above {
            position: absolute;
            top: 15%;
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
            width: 120px;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .heart-above-main {
            position: relative;
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .heart-above-primary {
            font-size: 4rem;
            color: var(--gold-primary);
            animation: heartAboveFloat 10s ease-in-out infinite, heartAboveGlow 6s ease-in-out infinite;
            filter: drop-shadow(0 0 25px rgba(212, 175, 55, 0.7));
            position: absolute;
        }

        .heart-above-secondary {
            font-size: 2.2rem;
            color: var(--rose-gold);
            animation: heartAboveRotateReverse 14s linear infinite, heartAbovePulse 3s ease-in-out infinite;
            filter: drop-shadow(0 0 15px rgba(183, 110, 121, 0.6));
            position: absolute;
            opacity: 0.9;
        }

        .heart-above-glow {
            position: absolute;
            width: 150px;
            height: 150px;
            background: radial-gradient(
                circle,
                rgba(212, 175, 55, 0.25) 0%,
                rgba(212, 175, 55, 0.15) 30%,
                transparent 70%
            );
            border-radius: 50%;
            animation: heartAboveGlowPulse 8s ease-in-out infinite;
        }

        .heart-connector {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 60px;
            background: linear-gradient(to bottom, 
                rgba(212, 175, 55, 0.8) 0%, 
                rgba(212, 175, 55, 0.4) 50%, 
                transparent 100%);
            animation: connectorFade 4s ease-in-out infinite;
        }

        /* ============ HERO CONTENT ============ */
        .hero-content {
            position: relative;
            z-index: 4;
            color: #fff;
            height: 100vh;
            min-height: 600px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 0 20px;
        }

        .hero-content .container {
            max-width: 1200px;
            animation: fadeInUp 1s ease-out 0.3s forwards;
            opacity: 0;
            padding-top: 80px;
        }

        .hero-title {
            font-family: 'Playfair Display', serif;
            font-size: clamp(2.5rem, 5vw, 4.5rem);
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-shadow: 3px 3px 15px rgba(0, 0, 0, 0.5);
            line-height: 1.1;
            position: relative;
        }

        .hero-title::before {
            content: '';
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, transparent, var(--gold-primary), transparent);
        }

        .highlight-word {
            font-family: 'Dancing Script', cursive;
            background: linear-gradient(135deg, var(--gold-primary) 0%, var(--gold-secondary) 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            display: inline-block;
            position: relative;
        }

        .hero-subtitle {
            font-size: clamp(1.1rem, 2vw, 1.8rem);
            font-weight: 300;
            margin-bottom: 2.5rem;
            opacity: 0.95;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.4;
        }

        /* ============ BUTTONS ============ */
        .btn-gold-gradient {
            background: linear-gradient(135deg, var(--gold-primary) 0%, var(--gold-secondary) 100%);
            border: none;
            color: #000;
            font-weight: 600;
            padding: 1rem 2.5rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
            text-decoration: none;
            display: inline-block;
        }

        .btn-gold-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(212, 175, 55, 0.4);
            color: #000;
        }

        .btn-outline-light {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: #fff;
            padding: 0.8rem 2rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: var(--gold-primary);
            color: #fff;
        }

        /* ============ WHAT WE OFFER SECTION ============ */
        .what-we-offer {
            padding: 6rem 0;
            background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
            position: relative;
        }

        .what-we-offer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, 
                transparent, 
                var(--gold-primary), 
                var(--rose-gold), 
                transparent
            );
            z-index: 1;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            text-align: center;
            margin-bottom: 4rem;
            color: white;
            position: relative;
            padding-bottom: 1.5rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, 
                transparent, 
                var(--gold-primary), 
                var(--rose-gold), 
                transparent
            );
        }

        .section-subtitle {
            text-align: center;
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.2rem;
            margin-top: -2.5rem;
            margin-bottom: 3rem;
            font-weight: 300;
            position: relative;
        }

        .offer-card {
            background: white;
            border-radius: 20px;
            padding: 3rem 2rem;
            height: 100%;
            transition: all 0.4s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(212, 175, 55, 0.1);
            text-align: center;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .offer-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(to right, 
                var(--gold-primary), 
                var(--rose-gold)
            );
            transform: scaleX(0);
            transition: transform 0.4s ease;
        }

        .offer-card:hover::before {
            transform: scaleX(1);
        }

        .offer-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(212, 175, 55, 0.15);
        }

        .offer-icon {
            font-size: 3.5rem;
            color: var(--gold-primary);
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
            position: relative;
            display: inline-block;
        }

        .offer-card:hover .offer-icon {
            transform: scale(1.2);
            color: var(--rose-gold);
        }

        .offer-card h3 {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: #000;
        }

        .offer-card p {
            color: #666;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .offer-features {
            list-style: none;
            padding: 0;
            margin: 0;
            text-align: left;
            width: 100%;
        }

        .offer-features li {
            padding: 0.5rem 0;
            color: #666;
            position: relative;
            padding-left: 1.8rem;
            margin-bottom: 0.5rem;
        }

        .offer-features li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: var(--gold-primary);
            font-weight: bold;
            font-size: 1.1rem;
        }

        /* ============ FOR COUPLES SECTION ============ */
        .for-couples-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, var(--dark-bg) 0%, var(--darker-bg) 100%);
            position: relative;
            overflow: hidden;
        }

        .for-couples-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, 
                transparent, 
                var(--gold-primary), 
                var(--rose-gold), 
                transparent
            );
            z-index: 1;
        }

        .couples-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 3rem;
            border: 1px solid rgba(212, 175, 55, 0.1);
            transition: all 0.3s ease;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

        .couples-card:hover {
            transform: translateY(-5px);
            border-color: rgba(212, 175, 55, 0.3);
            box-shadow: 0 15px 30px rgba(212, 175, 55, 0.1);
        }

        .couples-icon {
            font-size: 3rem;
            color: var(--gold-primary);
            margin-bottom: 1.5rem;
        }

        .couples-card h3 {
            color: white;
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .couples-card p {
            color: #ddd;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .couples-problem {
            background: rgba(255, 255, 255, 0.05);
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            border-left: 3px solid var(--rose-gold);
        }

        .couples-solution {
            background: rgba(212, 175, 55, 0.1);
            padding: 1rem;
            border-radius: 10px;
            border-left: 3px solid var(--gold-primary);
        }

        .couples-problem h5, .couples-solution h5 {
            color: white;
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }

        .couples-problem p, .couples-solution p {
            color: #ddd;
            font-size: 0.9rem;
            margin: 0;
        }

        /* ============ TRUST INDICATORS ============ */
        .trust-indicators {
            padding: 4rem 0;
            background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        }

        .trust-item {
            text-align: center;
            padding: 2rem;
        }

        .trust-icon {
            font-size: 2.5rem;
            color: var(--gold-primary);
            margin-bottom: 1rem;
        }

        .trust-number {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
        }

        .trust-label {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* ============ SCROLL INDICATOR ============ */
        .scroll-indicator {
            position: absolute;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
            cursor: pointer;
        }

        .scroll-indicator i {
            color: var(--gold-primary);
            font-size: 2rem;
            animation: bounce 2s infinite;
        }

        /* ============ SLOW MOTION PICTURE SLIDER SECTION ============ */
        .picture-slider-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, var(--darker-bg) 0%, var(--dark-bg) 100%);
            position: relative;
            overflow: hidden;
        }

        .picture-slider-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, 
                transparent, 
                var(--gold-primary), 
                var(--rose-gold), 
                transparent
            );
            z-index: 1;
        }

        .picture-slider-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
            position: relative;
            z-index: 2;
        }

        .picture-slider {
            overflow: hidden;
            padding: 30px 0;
            position: relative;
        }

        .picture-track {
            display: flex;
            gap: 30px;
            transition: transform 2s cubic-bezier(0.2, 0.7, 0.4, 0.9); /* Slow motion transition */
        }

        .picture-slide {
            min-width: 380px;
            height: 500px;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            transition: all 1.2s cubic-bezier(0.2, 0.7, 0.4, 0.9); /* Slow hover effects */
            box-shadow: 
                0 15px 35px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.05),
                inset 0 0 0 1px rgba(255, 255, 255, 0.03);
            background: var(--dark-card);
            opacity: 0.85;
            transform: scale(0.95);
        }

        .picture-slide.active {
            opacity: 1;
            transform: scale(1);
            box-shadow: 
                0 25px 50px rgba(0, 0, 0, 0.5),
                0 0 0 2px var(--gold-primary),
                0 0 40px rgba(212, 175, 55, 0.3);
        }

        .picture-slide:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 
                0 35px 60px rgba(0, 0, 0, 0.5),
                0 0 0 2px var(--gold-primary),
                0 0 50px rgba(212, 175, 55, 0.4);
        }

        .picture-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 2.5s cubic-bezier(0.2, 0.7, 0.4, 0.9); /* Very slow zoom */
        }

        .picture-slide:hover .picture-image {
            transform: scale(1.12);
        }

        .picture-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                to bottom, 
                transparent 0%, 
                transparent 50%, 
                rgba(0, 0, 0, 0.95) 100%
            );
            display: flex;
            align-items: flex-end;
            padding: 35px;
            opacity: 0;
            transition: all 1.5s cubic-bezier(0.2, 0.7, 0.4, 0.9);
        }

        .picture-slide:hover .picture-overlay {
            opacity: 1;
            background: linear-gradient(
                to bottom, 
                transparent 0%, 
                transparent 20%, 
                rgba(0, 0, 0, 0.98) 100%
            );
        }

        .picture-title-container {
            width: 100%;
            transform: translateY(20px);
            transition: transform 1.2s cubic-bezier(0.2, 0.7, 0.4, 0.9) 0.3s;
        }

        .picture-slide:hover .picture-title-container {
            transform: translateY(0);
        }

        .picture-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            color: white;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
            margin: 0;
            line-height: 1.2;
            position: relative;
            padding-bottom: 10px;
        }

        .picture-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(to right, var(--gold-primary), transparent);
            transition: width 1.5s cubic-bezier(0.2, 0.7, 0.4, 0.9) 0.6s;
        }

        .picture-slide:hover .picture-title::after {
            width: 100px;
        }

        .picture-subtitle {
            color: #ddd;
            font-size: 0.95rem;
            margin-top: 8px;
        }

        /* Picture slider controls */
        .picture-controls {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 25px;
            margin-top: 40px;
            position: relative;
            z-index: 2;
        }

        .picture-btn {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(212, 175, 55, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gold-primary);
            font-size: 1.3rem;
            cursor: pointer;
            transition: all 0.8s cubic-bezier(0.2, 0.7, 0.4, 0.9);
            backdrop-filter: blur(10px);
            box-shadow: 
                0 5px 15px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.05);
        }

        .picture-btn:hover {
            background: var(--gold-primary);
            color: #000;
            border-color: var(--gold-primary);
            transform: translateY(-3px) scale(1.1);
            box-shadow: 
                0 10px 30px rgba(212, 175, 55, 0.4),
                0 0 30px rgba(212, 175, 55, 0.3);
        }

        .picture-dots {
            display: flex;
            gap: 12px;
        }

        .picture-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid transparent;
            cursor: pointer;
            transition: all 0.6s cubic-bezier(0.2, 0.7, 0.4, 0.9);
            position: relative;
        }

        .picture-dot::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: transparent;
            transition: all 0.6s cubic-bezier(0.2, 0.7, 0.4, 0.9);
        }

        .picture-dot.active {
            background: transparent;
            border-color: var(--gold-primary);
            transform: scale(1.3);
        }

        .picture-dot.active::before {
            background: var(--gold-primary);
        }

        .picture-dot:hover:not(.active) {
            background: rgba(212, 175, 55, 0.4);
            transform: scale(1.2);
        }

        .slide-counter {
            color: #aaa;
            font-size: 0.9rem;
            margin-left: 20px;
            font-weight: 300;
        }

        /* Progress bar for auto-slide */
        .slide-progress {
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0%;
            height: 3px;
            background: linear-gradient(90deg, var(--gold-primary), var(--rose-gold));
            border-radius: 3px;
            transition: width 10s linear;
            z-index: 10;
        }

        .picture-slide.active .slide-progress {
            width: 100%;
        }

        /* ============ CTA SECTION ============ */
        .cta-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
