    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const scrollIndicator = document.querySelector('.scroll-indicator');
            
            // Scroll to picture slider section
            scrollIndicator.addEventListener('click', function() {
                const pictureSliderSection = document.querySelector('#picture-slider');
                if (pictureSliderSection) {
                    pictureSliderSection.scrollIntoView({ behavior: 'smooth' });
                }
            });
            
            // Video loaded event with PiP prevention
            const video = document.querySelector('video');
            
            // Disable PiP completely
            if (video.disablePictureInPicture !== undefined) {
                video.disablePictureInPicture = true;
            }
            
            // Prevent right-click menu
            video.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Exit PiP if somehow entered
            video.addEventListener('enterpictureinpicture', function(e) {
                e.preventDefault();
                if (document.exitPictureInPicture) {
                    document.exitPictureInPicture().catch(() => {});
                }
            });
            
            // Remove PiP button if browser adds it
            setTimeout(() => {
                const pipButtons = document.querySelectorAll('[data-pip], [aria-label*="Picture-in-Picture"], [title*="Picture-in-Picture"]');
                pipButtons.forEach(btn => {
                    btn.style.display = 'none';
                    btn.remove();
                });
            }, 1000);
            
            video.addEventListener('loadeddata', function() {
                console.log('Video loaded successfully - PiP disabled');
            });
            
            // Heart badge interactive effects
            const heartBadge = document.querySelector('.heart-above-main');
            
            if (heartBadge) {
                // Add hover effect for desktop
                heartBadge.addEventListener('mouseenter', function() {
                    if (window.innerWidth > 768) {
                        // Pause animations
                        const primaryHeart = this.querySelector('.heart-above-primary');
                        const secondaryHeart = this.querySelector('.heart-above-secondary');
                        const glow = document.querySelector('.heart-above-glow');
                        const connector = document.querySelector('.heart-connector');
                        
                        if (primaryHeart) primaryHeart.style.animationPlayState = 'paused';
                        if (secondaryHeart) secondaryHeart.style.animationPlayState = 'paused';
                        if (glow) glow.style.animationPlayState = 'paused';
                        if (connector) connector.style.animationPlayState = 'paused';
                        
                        // Add beat effect
                        this.style.animation = 'heartBeat 1s ease';
                        
                        // Enhance glow
                        if (glow) {
                            glow.style.opacity = '0.9';
                            glow.style.transform = 'scale(1.3)';
                        }
                        
                        // Enhance connector
                        if (connector) {
                            connector.style.opacity = '1';
                            connector.style.height = '100px';
                        }
                    }
                });
                
                heartBadge.addEventListener('mouseleave', function() {
                    if (window.innerWidth > 768) {
                        // Resume animations
                        const primaryHeart = this.querySelector('.heart-above-primary');
                        const secondaryHeart = this.querySelector('.heart-above-secondary');
                        const glow = document.querySelector('.heart-above-glow');
                        const connector = document.querySelector('.heart-connector');
                        
                        if (primaryHeart) primaryHeart.style.animationPlayState = 'running';
                        if (secondaryHeart) secondaryHeart.style.animationPlayState = 'running';
                        if (glow) glow.style.animationPlayState = 'running';
                        if (connector) connector.style.animationPlayState = 'running';
                        
                        // Remove beat effect
                        this.style.animation = '';
                        
                        // Reset glow
                        if (glow) {
                            glow.style.opacity = '';
                            glow.style.transform = '';
                        }
                        
                        // Reset connector
                        if (connector) {
                            connector.style.opacity = '';
                            connector.style.height = '';
                        }
                    }
                });
                
                // Add click effect for mobile
                heartBadge.addEventListener('click', function() {
                    // Create pulse effect
                    this.style.transform = 'scale(1.2)';
                    
                    // Emit floating hearts from the badge
                    emitHeartsFromBadge(3);
                    
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 300);
                });
            }
            
            // Floating hearts emitter from the heart badge
            function emitHeartsFromBadge(count = 3) {
                const colors = ['#D4AF37', '#FFD700', '#B76E79'];
                const badge = document.querySelector('.heart-badge-above');
                
                if (!badge) return;
                
                const badgeRect = badge.getBoundingClientRect();
                const startX = badgeRect.left + badgeRect.width / 2;
                const startY = badgeRect.top + badgeRect.height / 2;
                
                for (let i = 0; i < count; i++) {
                    setTimeout(() => {
                        createFloatingHeartFromBadge(startX, startY);
                    }, i * 100);
                }
            }
            
            function createFloatingHeartFromBadge(startX, startY) {
                const colors = ['#D4AF37', '#FFD700', '#B76E79'];
                const heart = document.createElement('div');
                heart.innerHTML = '<i class="fas fa-heart"></i>';
                heart.style.cssText = `
                    position: fixed;
                    font-size: ${Math.random() * 15 + 10}px;
                    color: ${colors[Math.floor(Math.random() * colors.length)]};
                    opacity: 0;
                    z-index: 3;
                    pointer-events: none;
                    animation: floatFromBadge 2s ease-out forwards;
                `;
                
                heart.style.left = `${startX}px`;
                heart.style.top = `${startY}px`;
                heart.style.transform = 'translate(-50%, -50%)';
                
                document.body.appendChild(heart);
                
                // Remove after animation completes
                setTimeout(() => {
                    if (heart.parentNode) {
                        heart.parentNode.removeChild(heart);
                    }
                }, 2000);
            }
            
            // Add floating heart animation from badge
            const style = document.createElement('style');
            style.textContent = `
                @keyframes floatFromBadge {
                    0% {
                        transform: translate(-50%, -50%) rotate(0deg) scale(0.3);
                        opacity: 0.9;
                    }
                    100% {
                        transform: translate(
                            ${Math.random() > 0.5 ? '-' : ''}${Math.random() * 100 + 50}px, 
                            -${Math.random() * 80 + 30}px
                        ) rotate(${Math.random() > 0.5 ? '' : '-'}${Math.random() * 180}deg) scale(1);
                        opacity: 0;
                    }
                }
            `;
            document.head.appendChild(style);
            
            // Create occasional floating hearts from badge
            let floatingHeartInterval;
            
            function startFloatingHearts() {
                if (window.innerWidth > 768) {
                    floatingHeartInterval = setInterval(() => {
                        if (Math.random() > 0.8) {
                            const badge = document.querySelector('.heart-badge-above');
                            if (badge) {
                                const badgeRect = badge.getBoundingClientRect();
                                const startX = badgeRect.left + badgeRect.width / 2;
                                const startY = badgeRect.top + badgeRect.height / 2;
                                createFloatingHeartFromBadge(startX, startY);
                            }
                        }
                    }, 4000);
                }
            }
            
            function stopFloatingHearts() {
                if (floatingHeartInterval) {
                    clearInterval(floatingHeartInterval);
                }
            }
            
            // Start floating hearts after page load
            setTimeout(() => {
                startFloatingHearts();
            }, 2000);
            
            // Stop floating hearts when user scrolls
            let scrollTimeout;
            window.addEventListener('scroll', function() {
                stopFloatingHearts();
                
                clearTimeout(scrollTimeout);
                scrollTimeout = setTimeout(() => {
                    startFloatingHearts();
                }, 5000);
            });
            
            // ============ DARK PICTURE SLIDER FUNCTIONALITY ============
            const track = document.getElementById('pictureTrack');
            const prevBtn = document.getElementById('picturePrev');
            const nextBtn = document.getElementById('pictureNext');
            const dotsContainer = document.getElementById('pictureDots');
            const slideCounter = document.getElementById('slideCounter');
            
            if (!track) return;
            
            const slides = document.querySelectorAll('.picture-slide');
            const slideWidth = slides[0].offsetWidth + 30; // width + gap
            const containerWidth = track.parentElement.offsetWidth;
            const visibleSlides = Math.floor(containerWidth / slideWidth);
            const totalSlides = slides.length;
            const totalSlideGroups = Math.ceil(totalSlides / visibleSlides);
            
            let currentPosition = 0;
            let currentSlideGroup = 0;
            
            // Create dots
            function createDots() {
                dotsContainer.innerHTML = '';
                for (let i = 0; i < totalSlideGroups; i++) {
                    const dot = document.createElement('button');
                    dot.className = `picture-dot ${i === 0 ? 'active' : ''}`;
                    dot.addEventListener('click', () => goToSlideGroup(i));
                    dotsContainer.appendChild(dot);
                }
                updateSlideCounter();
            }
            
            // Update slide counter
            function updateSlideCounter() {
                if (slideCounter) {
                    slideCounter.textContent = `${currentSlideGroup + 1}/${totalSlideGroups}`;
                }
            }
            
            // Update dots
            function updateDots() {
                const dots = document.querySelectorAll('.picture-dot');
                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentSlideGroup);
                });
                updateSlideCounter();
            }
            
            // Move to specific slide group
            function goToSlideGroup(slideIndex) {
                currentSlideGroup = Math.max(0, Math.min(slideIndex, totalSlideGroups - 1));
                currentPosition = -currentSlideGroup * visibleSlides * slideWidth;
                track.style.transform = `translateX(${currentPosition}px)`;
                updateDots();
            }
            
            // Next slide
            function nextSlide() {
                if (currentSlideGroup < totalSlideGroups - 1) {
                    goToSlideGroup(currentSlideGroup + 1);
                } else {
                    goToSlideGroup(0); // Loop back to start
                }
            }
            
            // Previous slide
            function prevSlide() {
                if (currentSlideGroup > 0) {
                    goToSlideGroup(currentSlideGroup - 1);
                } else {
                    goToSlideGroup(totalSlideGroups - 1); // Loop to end
                }
            }
            
            // Initialize slider
            function initPictureSlider() {
                createDots();
                
                // Button events
                prevBtn.addEventListener('click', prevSlide);
                nextBtn.addEventListener('click', nextSlide);
                
                // Touch/swipe support
                let startX = 0;
                let isDragging = false;
                
                track.addEventListener('touchstart', (e) => {
                    startX = e.touches[0].clientX;
                    isDragging = true;
                    track.style.transition = 'none';
                });
                
                track.addEventListener('touchmove', (e) => {
                    if (!isDragging) return;
                    const currentX = e.touches[0].clientX;
                    const diff = currentX - startX;
                    track.style.transform = `translateX(${currentPosition + diff}px)`;
                });
                
                track.addEventListener('touchend', (e) => {
                    if (!isDragging) return;
                    isDragging = false;
                    track.style.transition = 'transform 0.5s ease';
                    
                    const endX = e.changedTouches[0].clientX;
                    const diff = endX - startX;
                    
                    if (Math.abs(diff) > 50) { // Minimum swipe distance
                        if (diff > 0) {
                            prevSlide();
                        } else {
                            nextSlide();
                        }
                    } else {
                        goToSlideGroup(currentSlideGroup); // Return to current position
                    }
                });
                
                // Mouse drag support for desktop
                track.addEventListener('mousedown', (e) => {
                    startX = e.clientX;
                    isDragging = true;
                    track.style.transition = 'none';
                    e.preventDefault();
                });
                
                document.addEventListener('mousemove', (e) => {
                    if (!isDragging) return;
                    const currentX = e.clientX;
                    const diff = currentX - startX;
                    track.style.transform = `translateX(${currentPosition + diff}px)`;
                });
                
                document.addEventListener('mouseup', (e) => {
                    if (!isDragging) return;
                    isDragging = false;
                    track.style.transition = 'transform 0.5s ease';
                    
                    const endX = e.clientX;
                    const diff = endX - startX;
                    
                    if (Math.abs(diff) > 50) {
                        if (diff > 0) {
                            prevSlide();
                        } else {
                            nextSlide();
                        }
                    } else {
                        goToSlideGroup(currentSlideGroup);
                    }
                });
                
                // Auto-advance every 6 seconds
                let autoSlide = setInterval(nextSlide, 6000);
                
                // Pause auto-slide on hover
                const sliderContainer = document.querySelector('.picture-slider');
                sliderContainer.addEventListener('mouseenter', () => {
                    clearInterval(autoSlide);
                    // Add subtle glow effect to current slide
                    const currentSlides = getCurrentVisibleSlides();
                    currentSlides.forEach(slide => {
                        slide.style.boxShadow = 
                            '0 25px 50px rgba(0, 0, 0, 0.4), ' +
                            '0 0 0 2px var(--gold-primary), ' +
                            '0 0 40px rgba(212, 175, 55, 0.3), ' +
                            'inset 0 0 0 1px rgba(255, 255, 255, 0.05)';
                    });
                });
                
                sliderContainer.addEventListener('mouseleave', () => {
                    autoSlide = setInterval(nextSlide, 6000);
                    // Remove glow effect
                    const currentSlides = getCurrentVisibleSlides();
                    currentSlides.forEach(slide => {
                        slide.style.boxShadow = '';
                    });
                });
                
                // Get currently visible slides
                function getCurrentVisibleSlides() {
                    const startIndex = currentSlideGroup * visibleSlides;
                    const endIndex = Math.min(startIndex + visibleSlides, totalSlides);
                    return Array.from(slides).slice(startIndex, endIndex);
                }
                
                // Add click effect to slides
                slides.forEach(slide => {
                    slide.addEventListener('click', function() {
                        // Create click animation
                        this.style.transform = 'scale(0.95) translateY(-15px)';
                        
                        // Show subtitle immediately on mobile
                        if (window.innerWidth <= 768) {
                            const subtitle = this.querySelector('.picture-subtitle');
                            subtitle.style.opacity = '0.8';
                            subtitle.style.transform = 'translateY(0)';
                        }
                        
                        setTimeout(() => {
                            this.style.transform = 'translateY(-15px) scale(1.02)';
                        }, 150);
                        
                        // Get the title
                        const title = this.querySelector('.picture-title').textContent;
                        console.log(`Clicked on: ${title}`);
                        
                        // Optional: Add your custom click action here
                        // For example: open a modal, navigate to gallery, etc.
                    });
                });
                
                // Add keyboard navigation
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'ArrowLeft') {
                        prevSlide();
                    } else if (e.key === 'ArrowRight') {
                        nextSlide();
                    }
                });
            }
            
            // Initialize slider
            initPictureSlider();
            
            // Update on resize
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(() => {
                    const newSlideWidth = slides[0].offsetWidth + 30;
                    const newContainerWidth = track.parentElement.offsetWidth;
                    const newVisibleSlides = Math.floor(newContainerWidth / newSlideWidth);
                    const newTotalSlideGroups = Math.ceil(totalSlides / newVisibleSlides);
                    
                    if (newTotalSlideGroups !== totalSlideGroups) {
                        currentSlideGroup = 0;
                        currentPosition = 0;
                        track.style.transform = 'translateX(0)';
                        createDots();
                    } else {
                        // Recalculate position with new slide width
                        currentPosition = -currentSlideGroup * newVisibleSlides * newSlideWidth;
                        track.style.transform = `translateX(${currentPosition}px)`;
                    }
                }, 250);
            });
        });
    </script>
