            const slideWidth = slides[0]?.offsetWidth || 380;
            const gap = 30;
            
            // Clone slides for infinite loop
            const firstSlideClone = slides[0].cloneNode(true);
            const lastSlideClone = slides[totalSlides - 1].cloneNode(true);
            
            // Add clones to the track
            track.appendChild(firstSlideClone);
            track.insertBefore(lastSlideClone, slides[0]);
            
            // Get all slides including clones
            const allSlides = Array.from(track.querySelectorAll('.picture-slide'));
            const totalSlidesWithClones = allSlides.length;
            
            // Set initial position to show first real slide (index 1 because we added clone at beginning)
            currentSlide = 1;
            track.style.transform = `translateX(-${currentSlide * (slideWidth + gap)}px)`;
            
            // Click protection flag
            let isAnimating = false;
            let clickTimeout = null;
            
            // Create dots for real slides only (12 dots)
            function createDots() {
                if (!dotsContainer) return;
                dotsContainer.innerHTML = '';
                for (let i = 0; i < totalSlides; i++) {
                    const dot = document.createElement('div');
                    dot.className = `picture-dot ${i === 0 ? 'active' : ''}`;
                    dot.setAttribute('data-index', i);
                    dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
                    dotsContainer.appendChild(dot);
                }
            }
            
            // Update slider position with smooth transition
            function updateSlider(animate = true, force = false) {
                // Prevent multiple animations if already animating
                if (isAnimating && !force) return;
                
                if (animate) {
                    track.style.transition = 'transform 2s cubic-bezier(0.2, 0.7, 0.4, 0.9)';
                    isAnimating = true;
                } else {
                    track.style.transition = 'none';
                }
                
                const moveX = currentSlide * (slideWidth + gap);
                track.style.transform = `translateX(-${moveX}px)`;
                
                // Handle infinite loop boundaries
                setTimeout(() => {
                    // If we're at the first clone (index 0), jump to the last real slide
                    if (currentSlide === 0) {
                        track.style.transition = 'none';
                        currentSlide = totalSlides;
                        track.style.transform = `translateX(-${currentSlide * (slideWidth + gap)}px)`;
                    }
                    // If we're at the last clone, jump to the first real slide
                    else if (currentSlide === totalSlidesWithClones - 1) {
                        track.style.transition = 'none';
                        currentSlide = 1;
                        track.style.transform = `translateX(-${currentSlide * (slideWidth + gap)}px)`;
                    }
                    
                    // Update active states and UI
                    updateActiveStates();
                    
                    // Reset animation flag after transition
                    if (animate) {
                        setTimeout(() => {
                            isAnimating = false;
                        }, 100); // Small buffer to ensure animation is complete
                    }
                }, animate ? 2000 : 0);
            }
            
            // Update active slide states and UI elements
            function updateActiveStates() {
                // Calculate real slide index (0-based for 12 slides)
                let realIndex;
                if (currentSlide === 0) {
                    realIndex = totalSlides - 1; // Last real slide (11)
                } else if (currentSlide === totalSlidesWithClones - 1) {
                    realIndex = 0; // First real slide (0)
                } else {
                    realIndex = currentSlide - 1; // Adjust for clones
                }
                
                // Update slide active states
                allSlides.forEach((slide, index) => {
                    slide.classList.toggle('active', index === currentSlide);
                    
                    // Reset and restart progress bar for active slide
                    const progressBar = slide.querySelector('.slide-progress');
                    if (progressBar) {
                        progressBar.style.transition = 'none';
                        progressBar.style.width = '0%';
                        
                        if (index === currentSlide) {
                            setTimeout(() => {
                                progressBar.style.transition = 'width 10s linear';
                                progressBar.style.width = '100%';
                            }, 100);
                        }
                    }
                });
                
                // Update dots (12 dots for 12 real slides)
                document.querySelectorAll('.picture-dot').forEach((dot, index) => {
                    dot.classList.toggle('active', index === realIndex);
                });
                
                // Update counter (1/12 format)
                if (slideCounter) {
                    slideCounter.textContent = `${realIndex + 1}/${totalSlides}`;
                }
            }
            
            // Go to specific slide with infinite loop handling
            function goToSlide(index) {
                if (isAnimating) return;
                
                // Clear any pending click timeout
                if (clickTimeout) {
                    clearTimeout(clickTimeout);
                    clickTimeout = null;
                }
                
                if (index >= 0 && index < totalSlides) {
                    currentSlide = index + 1; // Adjust for clones
                    updateSlider(true);
                    resetAutoSlide();
                }
            }
            
            // Next slide with infinite loop and click protection
            function nextSlide() {
                if (isAnimating) return;
                
                // Clear any pending click timeout
                if (clickTimeout) {
                    clearTimeout(clickTimeout);
                    clickTimeout = null;
                }
                
                // Set click timeout to prevent rapid clicks
                isAnimating = true;
                clickTimeout = setTimeout(() => {
                    isAnimating = false;
                }, 2100); // Slightly longer than animation duration
                
                currentSlide++;
                updateSlider(true, true); // Force update even if already animating
                resetAutoSlide();
            }
            
            // Previous slide with infinite loop and click protection
            function prevSlide() {
                if (isAnimating) return;
                
                // Clear any pending click timeout
                if (clickTimeout) {
                    clearTimeout(clickTimeout);
                    clickTimeout = null;
                }
                
                // Set click timeout to prevent rapid clicks
                isAnimating = true;
                clickTimeout = setTimeout(() => {
                    isAnimating = false;
                }, 2100); // Slightly longer than animation duration
                
                currentSlide--;
                updateSlider(true, true); // Force update even if already animating
                resetAutoSlide();
            }
            
            // Dot click handler with debounce
            function handleDotClick(e) {
                if (isAnimating) return;
                
                const dot = e.target.closest('.picture-dot');
                if (!dot) return;
                
                const index = parseInt(dot.getAttribute('data-index'));
                if (!isNaN(index)) {
                    goToSlide(index);
                }
            }
            
            // Auto-slide
            let autoSlideInterval;
            function startAutoSlide() {
                if (totalSlides > 1) {
                    autoSlideInterval = setInterval(() => {
                        if (!isAnimating) {
                            nextSlide();
                        }
                    }, 12000); // 12 seconds per slide
                }
            }
            
            function stopAutoSlide() {
                clearInterval(autoSlideInterval);
            }
            
            function resetAutoSlide() {
                stopAutoSlide();
                setTimeout(startAutoSlide, 3000); // Wait 3 seconds before restarting
            }
            
            // Initialize
            createDots();
            updateSlider(false); // Initial position without animation
            
            // Event listeners with debounce
            if (prevBtn) {
                prevBtn.addEventListener('click', () => {
                    if (isAnimating) return;
                    
                    prevBtn.style.transform = 'scale(0.9)';
                    setTimeout(() => {
                        prevBtn.style.transform = 'scale(1)';
                    }, 300);
                    prevSlide();
                });
            }
            
            if (nextBtn) {
                nextBtn.addEventListener('click', () => {
                    if (isAnimating) return;
                    
                    nextBtn.style.transform = 'scale(0.9)';
                    setTimeout(() => {
                        nextBtn.style.transform = 'scale(1)';
                    }, 300);
                    nextSlide();
                });
            }
            
            if (dotsContainer) {
                dotsContainer.addEventListener('click', handleDotClick);
            }
            
            // Handle window resize
            let resizeTimer;
            window.addEventListener('resize', () => {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(() => {
                    // Recalculate and reposition
                    const newSlideWidth = allSlides[0]?.offsetWidth || 380;
                    track.style.transform = `translateX(-${currentSlide * (newSlideWidth + gap)}px)`;
                }, 500);
            });
            
            // Start auto-slide
            startAutoSlide();
            
            // Pause auto-slide on hover
            track.addEventListener('mouseenter', () => {
                stopAutoSlide();
                // Pause progress bars
                allSlides.forEach(slide => {
                    const progressBar = slide.querySelector('.slide-progress');
                    if (progressBar && slide.classList.contains('active')) {
                        const computedStyle = window.getComputedStyle(progressBar);
                        const width = computedStyle.getPropertyValue('width');
                        progressBar.style.transition = 'none';
                        progressBar.style.width = width;
                    }
                });
            });
            
            track.addEventListener('mouseleave', () => {
                setTimeout(() => {
                    startAutoSlide();
                    // Restart progress bar for active slide
                    allSlides.forEach(slide => {
                        const progressBar = slide.querySelector('.slide-progress');
                        if (progressBar && slide.classList.contains('active')) {
                            const currentWidth = parseFloat(progressBar.style.width || '0%');
                            const remainingWidth = 100 - currentWidth;
                            const remainingTime = (remainingWidth / 100) * 10000;
                            
                            progressBar.style.transition = `width ${remainingTime}ms linear`;
                            progressBar.style.width = '100%';
                        }
                    });
                }, 1000);
            });
            
            // Keyboard navigation with debounce
            document.addEventListener('keydown', (e) => {
                if (isAnimating) return;
                
                if (e.key === 'ArrowLeft') {
                    prevSlide();
                } else if (e.key === 'ArrowRight') {
                    nextSlide();
                }
            });
            
            // Touch/swipe support with debounce
            let touchStartX = 0;
            let touchEndX = 0;
            const swipeThreshold = 50;
            
            track.addEventListener('touchstart', (e) => {
                if (isAnimating) return;
                touchStartX = e.changedTouches[0].screenX;
            }, { passive: true });
            
            track.addEventListener('touchend', (e) => {
                if (isAnimating) return;
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, { passive: true });
            
            function handleSwipe() {
                const swipeDistance = touchEndX - touchStartX;
                
                if (Math.abs(swipeDistance) > swipeThreshold) {
                    if (swipeDistance > 0) {
                        prevSlide();
                    } else {
                        nextSlide();
                    }
                }
            }
            
            // Preload images
            function preloadImages() {
                const images = document.querySelectorAll('.picture-image');
                
                images.forEach(img => {
                    if (img.complete) {
                        img.classList.add('loaded');
                    } else {
                        img.addEventListener('load', function() {
                            this.classList.add('loaded');
                        });
                        img.addEventListener('error', function() {
                            console.error('Failed to load image:', this.src);
                            // Fallback image
                            this.src = 'https://images.unsplash.com/photo-1511285560929-80b456fea0bc?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80';
                        });
                    }
                });
            }
            
            setTimeout(preloadImages, 1000);
        }
        
        // Add hover effects to cards
        const cards = document.querySelectorAll('.offer-card, .couples-card, .step-card');
        cards.forEach(card => {
            card.style.transition = 'transform 0.5s ease, box-shadow 0.5s ease';
        });
        
        // Animate elements on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        
        // Observe cards
        document.querySelectorAll('.offer-card, .couples-card, .step-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            observer.observe(card);
        });
    });
