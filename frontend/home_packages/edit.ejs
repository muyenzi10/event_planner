<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Booking | Event Planner Pro</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    :root {
      --primary: #6a11cb;
      --secondary: #4361ee;
      --accent: #f72585;
      --dark: #212529;
    }

    body {
      background: linear-gradient(135deg, #f5f7fa, #e4e7f1);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }

    /* Sidebar & Overlay */
    .sidebar {
      position: fixed; top: 0; left: 0; width: 240px; height: 100%;
      background: var(--dark); padding-top: 70px;
      transform: translateX(-100%); transition: transform 0.3s ease;
      z-index: 1000;
    }
    .sidebar.active { transform: translateX(0); }
    .sidebar a { display: block; padding: 12px 20px; color: #fff; text-decoration: none; transition: background .3s; }
    .sidebar a:hover, .sidebar a.active { background: rgba(255,255,255,0.1); }

    .sidebar-toggle {
      position: fixed; top: 15px; left: 15px; z-index: 1100;
      background: var(--primary); border: none; color: #fff;
      padding: 8px 12px; border-radius: 8px; cursor: pointer;
    }

    .overlay {
      position: fixed; top:0; left:0; width:100%; height:100%;
      background: rgba(0,0,0,0.5); opacity:0; visibility:hidden;
      transition: opacity .3s ease; z-index:900;
    }
    .overlay.active { opacity:1; visibility:visible; }

    @media (min-width: 768px) {
      .sidebar { transform: translateX(0); }
      .overlay { display: none; }
      body { margin-left: 240px; }
    }

    /* Booking card */
    .booking-card { background: white; border-radius: 18px; box-shadow: 0 12px 40px rgba(0,0,0,0.08); margin-top: 30px; }
    .form-header { background: linear-gradient(270deg, var(--primary), var(--secondary)); color:white; padding: 30px; border-radius: 18px 18px 0 0; }
    .form-actions { display:flex; flex-direction: column; gap:15px; margin-top:20px; }
    @media (min-width: 768px) { .form-actions { flex-direction: row; justify-content: space-between; } }

    .required-star { color: var(--accent); margin-left: 3px; }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <button class="sidebar-toggle" aria-label="Toggle sidebar"><i class="fas fa-bars"></i></button>
  <nav class="sidebar">
    <a href="/Dashboard/booking" class="active"><i class="fas fa-calendar-alt me-2"></i>Bookings</a>
    <a href="/Dashboard/view/suppliers"><i class="fas fa-users me-2"></i>Suppliers</a>
  </nav>
  <div class="overlay"></div>

  <!-- Main Content -->
  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="booking-card">
          <div class="form-header">
            <h2 class="mb-0"><i class="fas fa-calendar-edit me-2"></i>Edit Booking</h2>
            <p class="mb-0 mt-1">Update your wedding details below</p>
          </div>

          <div class="p-4">
            <form action="/Dashboard/booking/update/<%= booking._id %>?_method=PUT" method="POST">
              
              <div class="accordion" id="bookingAccordion">

                <!-- Personal Info -->
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingPersonal">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePersonal">
                      Personal Information
                    </button>
                  </h2>
                  <div id="collapsePersonal" class="accordion-collapse collapse show" data-bs-parent="#bookingAccordion">
                    <div class="accordion-body">
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-user"></i>First Name<span class="required-star">*</span></label>
                        <input type="text" name="firstname" class="form-control" value="<%= booking.firstname %>" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-user"></i>Last Name<span class="required-star">*</span></label>
                        <input type="text" name="lastname" class="form-control" value="<%= booking.lastname %>" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-envelope"></i>Email<span class="required-star">*</span></label>
                        <input type="email" name="email" class="form-control" value="<%= booking.email %>" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-phone"></i>Phone<span class="required-star">*</span></label>
                        <input type="text" name="phone" class="form-control" value="<%= booking.phone %>" required>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Wedding Details -->
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingWedding">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWedding">
                      Wedding Details
                    </button>
                  </h2>
                  <div id="collapseWedding" class="accordion-collapse collapse" data-bs-parent="#bookingAccordion">
                    <div class="accordion-body">
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-calendar-day"></i>Date<span class="required-star">*</span></label>
                        <input type="date" name="weddingDate" class="form-control" value="<%= booking.weddingDate.toISOString().slice(0,10) %>" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-users"></i>Guests<span class="required-star">*</span></label>
                        <input type="number" name="guestsNumber" class="form-control" value="<%= booking.guestsNumber %>" min="1" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-ring"></i>Type<span class="required-star">*</span></label>
                        <input type="text" name="weddingType" class="form-control" value="<%= booking.weddingType %>" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-map-marker-alt"></i>Location<span class="required-star">*</span></label>
                        <input type="text" name="weddingLocation" class="form-control" value="<%= booking.weddingLocation %>" required>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Vision & Preferences -->
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingVision">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseVision">
                      Vision & Preferences
                    </button>
                  </h2>
                  <div id="collapseVision" class="accordion-collapse collapse" data-bs-parent="#bookingAccordion">
                    <div class="accordion-body">
                      <div class="mb-3">
                        <label class="form-label"><i class="fas fa-palette"></i>Wedding Vision & Theme</label>
                        <textarea name="weddingVision" class="form-control" rows="4"><%= booking.weddingVision %></textarea>
                      </div>
                    </div>
                  </div>
                </div>

              </div>

              <div class="form-actions">
                <a href="/Dashboard/booking" class="btn btn-outline-secondary"><i class="fas fa-times me-2"></i>Go back</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Update Booking</button>
              </div>

            </form>
          </div>
        </div>

        <div class="mt-4 text-center text-muted">
          Â© <%= new Date().getFullYear() %> Event Planner Pro
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const toggleBtn = document.querySelector('.sidebar-toggle');
    const sidebar  = document.querySelector('.sidebar');
    const overlay  = document.querySelector('.overlay');
    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('active');
      overlay.classList.toggle('active');
    });
    overlay.addEventListener('click', () => {
      sidebar.classList.remove('active');
      overlay.classList.remove('active');
    });
  </script>
</body>
</html>
