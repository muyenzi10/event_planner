<body>
    <%- include('../allpack/layout/navbar') %>
    
    <!-- Luxury Hero Section -->
    <section class="luxury-hero">
        <div class="floating-element diamond" style="top: 20%; left: 10%;"></div>
        <div class="floating-element ring" style="bottom: 20%; right: 10%;"></div>
        
        <div class="hero-content">
            <div class="brand">Dazzle Weddings</div>
            <h1>Wedding Solutions<br><span>Planning through Signature Services</span></h1>
            <div class="hero-divider"></div>
            <p>Our services are shaped with intention, allowing moments to unfold with depth and lasting presence</p>
            <a href="#services" class="cta-button animate-on-scroll">
                Explore Our Services
                <i class="fas fa-chevron-down"></i>
            </a>
        </div>
    </section>
    
    <!-- TITLE -->
    <div class="title-container" id="services">
        <div class="section-subtitle">Exclusive Collections</div>
        <h2 class="section-title">Our Luxury Services</h2>
        <p class="section-intro">Thoughtfully orchestrated experiences shaped with precision, discretion, and an uncompromising eye for detail</p>
    </div>
    
    <!-- SERVICES SECTION -->
    <div class="services-section">
        <div class="container">
            <div class="row">
                <% if (files.length === 0) { %>
                    <div class="col-12 no-services">
                        <p>No services available at the moment. Please check back soon!</p>
                    </div>
                <% } else { %>
                    <% files.forEach((file, index) => { %>
                        <% 
                            let link = '#';
                            if (file.title === 'Decor') { 
                                link = '/decor'; 
                            } else if (file.title === 'Invitation') { 
                                link = '/invitation'; 
                            } else if (file.title === 'Dresses') { 
                                link = '/dresses'; 
                            } else if (file.title === 'm.c') { 
                                link = '/mc'; 
                            } else if (file.title === 'Troupe') { 
                                link = '/troupe'; 
                            } else if (file.title === 'sound') { 
                                link = '/sound'; 
                            } else if (file.title === 'Photography') { 
                                link = '/photographers'; 
                            } else if (file.title === 'Catering') { 
                                link = '/catering'; 
                            } else if (file.title === 'Hospitality') { 
                                link = '/hospitality'; 
                            }
                        %>
                        
                        <div class="col-xl-4 col-lg-4 col-md-6 mb-4">
                            <div class="luxury-card animate-on-scroll" data-delay="<%= index * 50 %>">
                                <div class="card-image-wrapper">
                                    <a href="<%= link %>" class="card-image-link">
                                        <% if (file.fileType === 'image') { %>
                                            <img src="/all_disk/packges/<%= file.filePath %>" class="card-image" alt="<%= file.title %>" loading="lazy">
                                        <% } else if (file.fileType === 'video') { %>
                                            <video class="card-image" controls>
                                                <source src="/all_disk/packges/<%= file.filePath %>">
                                            </video>
                                        <% } %>
                                        <div class="card-overlay">
                                            <h4><%= file.title %></h4>
                                        </div>
                                    </a>
                                    <div class="card-icon">
                                        <% if (file.fileType === 'image') { %>
                                            <i class="fas fa-image"></i>
                                        <% } else if (file.fileType === 'video') { %>
                                            <i class="fas fa-video"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="card-content">
                                    <h4><%= file.title %></h4>
                                    <p><%= file.description %></p>
                                    <a href="<%= link %>" class="card-link">
                                        Explore Service
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Complementary Services Table -->
    <section id="complementary-services" class="complementary-services-section">
        <div class="floating-element" style="top: 15%; left: 5%; width: 120px; height: 120px; border: 1px solid var(--primary-gold); border-radius: 50%; opacity: 0.05;"></div>
        <div class="floating-element" style="bottom: 15%; right: 8%; width: 80px; height: 80px; border: 2px solid var(--primary-gold); transform: rotate(45deg); opacity: 0.05;"></div>
        <div class="table-floating-element circle"></div>
        <div class="table-floating-element diamond-small"></div>
        
        <div class="container">
            <div class="section-header">
                <div class="section-subtitle">Additional Excellence</div>
                <h2 class="section-title">Complementary Services</h2>
                <p class="section-intro">Complete your wedding experience with our additional premium offerings that ensure every detail is perfect.</p>
            </div>
            
            <div class="luxury-table-container">
                <div class="services-grid">
                    <div class="service-item animate-on-scroll" data-delay="0">
                        <div class="service-icon-wrapper"><i class="fas fa-car"></i></div>
                        <h4 class="service-title">Luxury Transportation</h4>
                        <p class="service-description">Arrive in style with our premium fleet of luxury vehicles for the entire wedding party.</p>
                    </div>
                    <div class="service-item animate-on-scroll" data-delay="50">
                        <div class="service-icon-wrapper"><i class="fas fa-compact-disc"></i></div>
                        <h4 class="service-title">DJ & Music Selection</h4>
                        <p class="service-description">Professional DJ services with customized playlists to keep your celebration alive.</p>
                    </div>
                    <div class="service-item animate-on-scroll" data-delay="100">
                        <div class="service-icon-wrapper"><i class="fas fa-microphone"></i></div>
                        <h4 class="service-title">Karaoke Entertainment</h4>
                        <p class="service-description">Fun karaoke setup for guests to showcase their talents and keep the party going.</p>
                    </div>
                    <div class="service-item animate-on-scroll" data-delay="150">
                        <div class="service-icon-wrapper"><i class="fas fa-guitar"></i></div>
                        <h4 class="service-title">Live Band Coordination</h4>
                        <p class="service-description">Hire and coordinate live musical performances tailored to your wedding theme.</p>
                    </div>
                    <div class="service-item animate-on-scroll" data-delay="200">
                        <div class="service-icon-wrapper"><i class="fas fa-wine-glass-alt"></i></div>
                        <h4 class="service-title">Beverage Curation</h4>
                        <p class="service-description">Expert selection and presentation of wines, cocktails, and non-alcoholic beverages.</p>
                    </div>
                    <div class="service-item animate-on-scroll" data-delay="250">
                        <div class="service-icon-wrapper"><i class="fas fa-music"></i></div>
                        <h4 class="service-title">Gakondo Singers</h4>
                        <p class="service-description">Performances by talented Gakondo singers, delivering traditional melodies and rhythms that make every celebration unforgettable.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <section class="footer-cta">
        <div class="container">
            <h3>Begin Your Journey</h3>
            <p class="service-description">
                Let us turn your wedding dreams into a flawless celebration. Our expert planners connect you with top vendors and handle every detail
            </p>
            <a href="/booking" class="cta-button-gold">
                <i class="fas fa-calendar-check"></i>
                Book Exclusive Consultation
            </a>
        </div>
    </section>

    <!-- Back to Top Button -->
    <button class="back-to-top" id="backToTop" aria-label="Back to top">
        <i class="fas fa-chevron-up"></i>
    </button>
    
    <%- include('../allpack/layout/footer') %>
    
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Enhanced JavaScript -->
    <script>
        // Full JavaScript – unchanged and conflict‑free
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.animate-on-scroll');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                if (elementTop < window.innerHeight - 100) {
                    const delay = element.dataset.delay || 0;
                    setTimeout(() => { element.classList.add('visible'); }, delay);
                }
            });
        };

        document.addEventListener('DOMContentLoaded', function() {
            animateOnScroll();
            preloadCardImages();
            if (window.innerWidth >= 992) equalizeCardHeights();
            toggleBackToTop();
            document.querySelectorAll('.card-link').forEach(link => {
                link.style.display = 'inline-flex';
                link.style.visibility = 'visible';
                link.style.opacity = '1';
            });
        });
        
        window.addEventListener('scroll', animateOnScroll);

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    e.preventDefault();
                    window.scrollTo({ top: targetElement.offsetTop - 80, behavior: 'smooth' });
                }
            });
        });

        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.luxury-hero');
            if(hero && window.innerWidth > 768) hero.style.transform = `translateY(${scrolled * 0.05}px)`;
        });

        document.querySelectorAll('.floating-element, .table-floating-element').forEach((el, i) => {
            el.style.animation = `float ${6 + i * 2}s ease-in-out infinite`;
            el.style.animationDelay = `${i * 0.5}s`;
        });

        document.querySelectorAll('.luxury-card').forEach(card => {
            if (!('ontouchstart' in window)) {
                card.addEventListener('mouseenter', () => card.style.zIndex = '10');
                card.addEventListener('mouseleave', () => card.style.zIndex = '1');
            }
        });

        document.querySelectorAll('.service-item').forEach(item => {
            if (!('ontouchstart' in window)) {
                item.addEventListener('mouseenter', function() { this.style.zIndex = '5'; });
                item.addEventListener('mouseleave', function() { this.style.zIndex = '1'; });
            }
        });

        function equalizeCardHeights() {
            if (window.innerWidth >= 992) {
                const cards = document.querySelectorAll('.luxury-card');
                cards.forEach(c => { c.style.height = 'auto'; c.style.minHeight = 'auto'; });
                let max = 0;
                cards.forEach(c => { if (c.offsetHeight > max) max = c.offsetHeight; });
                cards.forEach(c => { c.style.height = max + 'px'; });
            } else {
                document.querySelectorAll('.luxury-card').forEach(c => {
                    c.style.height = 'auto'; c.style.minHeight = 'auto';
                });
            }
        }

        let resizeTimer;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(() => {
                equalizeCardHeights();
                if (window.innerWidth < 992) {
                    document.querySelectorAll('.luxury-card').forEach(c => {
                        c.style.height = 'auto'; c.style.minHeight = 'auto';
                    });
                }
            }, 250);
        });

        function preloadCardImages() {
            document.querySelectorAll('.card-image').forEach(img => {
                if (!img.complete) { const tmp = new Image(); tmp.src = img.src; }
            });
        }

        const backToTopButton = document.getElementById('backToTop');
        const toggleBackToTop = () => {
            const isMobile = window.innerWidth <= 768;
            if (window.pageYOffset > (isMobile ? 100 : 300)) {
                backToTopButton.classList.add('visible');
                if (isMobile) {
                    backToTopButton.style.display = 'flex';
                    backToTopButton.style.opacity = '1';
                    backToTopButton.style.visibility = 'visible';
                }
            } else backToTopButton.classList.remove('visible');
        };
        window.addEventListener('scroll', toggleBackToTop);
        window.addEventListener('resize', toggleBackToTop);
        backToTopButton.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));

        if ('ontouchstart' in window) {
            backToTopButton.addEventListener('touchstart', function(e) { e.preventDefault(); this.style.transform = 'scale(0.95)'; });
            backToTopButton.addEventListener('touchend', function(e) { e.preventDefault(); this.style.transform = 'scale(1)'; window.scrollTo({ top: 0, behavior: 'smooth' }); });
            document.querySelectorAll('.card-link').forEach(link => {
                link.addEventListener('touchstart', function() { this.style.backgroundColor = 'rgba(245,12,24,0.1)'; });
                link.addEventListener('touchend', function() { this.style.backgroundColor = 'transparent'; });
            });
        }

        document.querySelectorAll('a').forEach(link => {
            const href = link.getAttribute('href');
            if (href && href.startsWith('#') && href !== '#') {
                link.addEventListener('click', function(e) {
                    if (href === '#') { e.preventDefault(); window.scrollTo({ top: 0, behavior: 'smooth' }); }
                });
            }
        });

        window.addEventListener('load', () => {
            setTimeout(() => {
                if (window.innerWidth < 992) {
                    document.querySelectorAll('.luxury-card').forEach(c => {
                        c.style.height = 'auto'; c.style.minHeight = 'auto'; c.style.flexShrink = '0';
                    });
                }
            }, 100);
        });
    </script>
</body>
</html>