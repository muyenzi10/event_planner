    <!-- Enhanced JavaScript -->
    <script>
        // Enhanced scroll animations
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.animate-on-scroll');
            
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 100;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    const delay = element.dataset.delay || 0;
                    setTimeout(() => {
                        element.classList.add('visible');
                    }, delay);
                }
            });
        };

        // Initialize on load
        window.addEventListener('load', animateOnScroll);
        window.addEventListener('scroll', animateOnScroll);

        // Smooth scroll with enhanced animation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Add active class to navbar item (if your navbar supports it)
                    document.querySelectorAll('nav a').forEach(link => {
                        link.classList.remove('active');
                    });
                    this.classList.add('active');
                }
            });
        });

        // Parallax effect for hero section
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.luxury-hero');
            if(hero) {
                hero.style.transform = `translateY(${scrolled * 0.05}px)`;
            }
        });

        // Floating elements animation
        const floatingElements = document.querySelectorAll('.floating-element, .table-floating-element');
        floatingElements.forEach((element, index) => {
            element.style.animation = `float ${6 + index * 2}s ease-in-out infinite`;
            element.style.animationDelay = `${index * 0.5}s`;
        });

        // Card hover enhancement
        document.querySelectorAll('.luxury-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', () => {
                card.style.zIndex = '1';
            });
        });

        // Table row hover enhancement
        document.querySelectorAll('.luxury-services-table tbody tr').forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.zIndex = '5';
            });
            
            row.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
        });

        // Lazy loading enhancement
        const imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if(entry.isIntersecting) {
                    const img = entry.target;
                    if(img.dataset.src) {
                        img.src = img.dataset.src;
                    }
                    observer.unobserve(img);
                }
            });
        });

        document.querySelectorAll('img[data-src]').forEach(img => {
            imageObserver.observe(img);
        });

        // Make all cards equal height on load
        function equalizeCardHeights() {
            if (window.innerWidth >= 992) { // Only on desktop
                const cards = document.querySelectorAll('.luxury-card');
                let maxHeight = 0;
                
                // Reset heights first
                cards.forEach(card => {
                    card.style.height = 'auto';
                });
                
                // Find max height
                cards.forEach(card => {
                    const cardHeight = card.offsetHeight;
                    if (cardHeight > maxHeight) {
                        maxHeight = cardHeight;
                    }
                });
                
                // Set all cards to max height
                cards.forEach(card => {
                    card.style.height = maxHeight + 'px';
                });
            }
        }

        // Run on load and resize
        window.addEventListener('load', equalizeCardHeights);
        window.addEventListener('resize', equalizeCardHeights);

        // Preload images for better UX
        function preloadCardImages() {
            const images = document.querySelectorAll('.card-image');
            images.forEach(img => {
                const tempImg = new Image();
                tempImg.src = img.src;
            });
        }

        // Preload images after page loads
        window.addEventListener('load', preloadCardImages);

        // Make entire card clickable on mobile (except the "Explore Service" button)
        document.querySelectorAll('.luxury-card').forEach(card => {
            const cardContent = card.querySelector('.card-content');
            const cardImageLink = card.querySelector('.card-image-link');
            const cardButton = card.querySelector('.card-link');
            const cardTitleLink = card.querySelector('.card-content h4 a');
            
            // Prevent event bubbling for the button
            if(cardButton) {
                cardButton.addEventListener('click', function(e) {
                    e.stopPropagation();
                });
            }
            
            // Make card content clickable (except the button)
            if(cardContent && window.innerWidth <= 768) {
                cardContent.addEventListener('click', function(e) {
                    // Don't trigger if clicking on the button
                    if(!e.target.closest('.card-link')) {
                        const link = cardImageLink ? cardImageLink.href : 
                                   cardTitleLink ? cardTitleLink.href : null;
                        if(link) {
                            window.location.href = link;
                        }
                    }
                });
            }
        });
    </script>
