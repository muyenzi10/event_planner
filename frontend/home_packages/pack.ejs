    <title>Services</title>
    
    <style>
        /* ===== GLOBAL & NAVBAR STYLES (NO FOOTER STYLES HERE) ===== */
        :root {
            --primary-gold: #D4AF37;
            --dark-gold: #B8860B;
            --light-gold: #F5E8B5;
            --primary-color: #D4AF37;
            --ivory: #FFFFF0;
            --champagne: #F7E7CE;
            --charcoal: #2C2C2C;
            --light-charcoal: #3A3A3A;
            --light-bg: #f9f9f9;
            --light-card: #ffffff;
            --light-section: #f5f5f5;
            --light-text: #333333;
            --light-text-light: #666666;
            --light-border: #e0e0e0;
            --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
            --transition-duration: 0.4s;
            --explore-service-color: #f50c18;
            --explore-service-hover: #ff3333;
            --navbar-height: 80px;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Montserrat', sans-serif;
            background: var(--light-bg);
            color: var(--light-text);
            line-height: 1.6;
            overflow-x: hidden;
            padding-top: var(--navbar-height);
            transition: all 0.3s ease;
        }
        
        .nav-link {
            font-family: 'Poppins', sans-serif !important;
        }
        
        h1, h2, h3, h4, h5 {
            font-family: 'Playfair Display', serif;
            font-weight: 600;
            line-height: 1.2;
            color: var(--charcoal);
        }
        
        /* Hero Section */
        .luxury-hero {
            position: relative;
            height: 85vh;
            min-height: 600px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6)), 
                        url('/assethome/5.jpg') center/cover no-repeat fixed;
            overflow: hidden;
        }
        
        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: white;
            max-width: 800px;
            padding: 2rem;
            animation: fadeInUp 1s var(--transition-smooth) 0.3s both;
        }
        
        .hero-content .brand {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.5rem;
            letter-spacing: 8px;
            text-transform: uppercase;
            margin-bottom: 1rem;
            color: var(--light-gold);
            opacity: 0.9;
        }
        
        .hero-content h1 {
            font-size: 4.5rem;
            font-weight: 400;
            margin-bottom: 1.5rem;
            line-height: 1.1;
            text-shadow: 2px 2px 15px rgba(0,0,0,0.3);
            color: white;
        }
        
        .hero-content h1 span {
            display: block;
            font-size: 3rem;
            color: var(--light-gold);
            font-weight: 300;
            margin-top: 0.5rem;
        }
        
        .hero-content p {
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto 2rem;
            opacity: 0.9;
            font-weight: 300;
            color: rgba(255, 255, 255, 0.9);
        }
        
        .hero-divider {
            width: 100px;
            height: 2px;
            background: var(--primary-gold);
            margin: 2rem auto;
            position: relative;
        }
        
        .hero-divider::before,
        .hero-divider::after {
            content: '';
            position: absolute;
            width: 10px;
            height: 10px;
            background: var(--primary-gold);
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
        }
        
        .hero-divider::before {
            left: -20px;
        }
        
        .hero-divider::after {
            right: -20px;
        }
        
        .cta-button {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: transparent;
            color: white;
            border: 2px solid var(--primary-gold);
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 500;
            text-decoration: none;
            transition: all var(--transition-duration) var(--transition-smooth);
            position: relative;
            overflow: hidden;
            margin-top: 1rem;
        }
        
        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.2), transparent);
            transition: left 0.6s;
        }
        
        .cta-button:hover {
            background: rgba(212, 175, 55, 0.1);
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
        }
        
        .cta-button:hover::before {
            left: 100%;
        }
        
        .title-container {
            text-align: center;
            padding: 5rem 0 3rem;
            background: linear-gradient(135deg, var(--light-section) 0%, var(--light-card) 100%);
            position: relative;
        }
        
        .section-header {
            text-align: center;
            margin-bottom: 4rem;
            position: relative;
        }
        
        .section-subtitle {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.3rem;
            color: var(--primary-gold);
            letter-spacing: 3px;
            text-transform: uppercase;
            margin-bottom: 1rem;
            opacity: 0.9;
        }
        
        .section-title {
            font-size: 3.2rem;
            color: var(--charcoal);
            margin-bottom: 1.5rem;
            position: relative;
            display: inline-block;
        }
        
        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: var(--primary-gold);
        }
        
        .section-intro {
            max-width: 600px;
            margin: 0 auto;
            font-size: 1.1rem;
            color: var(--light-text-light);
            line-height: 1.8;
        }
        
        /* Services Section */
        .services-section {
            padding: 4rem 0;
            background: var(--light-bg);
            position: relative;
        }
        
        .luxury-card {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 2rem;
            background: var(--light-card);
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: all var(--transition-duration) var(--transition-smooth);
            height: 100%;
            display: flex;
            flex-direction: column;
            border: 1px solid var(--light-border);
        }
        
        .luxury-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(212, 175, 55, 0.15);
            border-color: rgba(212, 175, 55, 0.3);
        }
        
        .card-image-wrapper {
            position: relative;
            width: 100%;
            overflow: hidden;
            flex-shrink: 0;
            aspect-ratio: 3/4;
        }
        
        .card-image-link {
            display: block;
            width: 100%;
            height: 100%;
            position: relative;
            text-decoration: none;
            color: inherit;
        }
        
        .card-image-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.8) 100%);
            opacity: 0;
            transition: opacity var(--transition-duration) var(--transition-smooth);
            z-index: 1;
            pointer-events: none;
        }
        
        .luxury-card:hover .card-image-wrapper::before {
            opacity: 1;
        }
        
        .card-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            transition: transform 0.8s var(--transition-smooth);
            will-change: transform;
        }
        
        .luxury-card:hover .card-image {
            transform: scale(1.08);
        }
        
        video.card-image {
            object-fit: cover;
        }
        
        .card-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background: var(--light-card);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-gold);
            font-size: 1.3rem;
            z-index: 4;
            transform: translateY(-10px);
            opacity: 0;
            transition: all var(--transition-duration) var(--transition-smooth);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border: 1px solid var(--light-border);
            pointer-events: none;
        }
        
        .luxury-card:hover .card-icon {
            transform: translateY(0);
            opacity: 1;
        }
        
        .card-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 1.75rem;
            background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, transparent 100%);
            color: white;
            z-index: 2;
            transform: translateY(10px);
            opacity: 0;
            transition: all var(--transition-duration) var(--transition-smooth);
            pointer-events: none;
        }
        
        .luxury-card:hover .card-overlay {
            transform: translateY(0);
            opacity: 1;
        }
        
        .card-overlay h4 {
            font-size: 1.4rem;
            margin-bottom: 0.25rem;
            color: white;
            line-height: 1.3;
        }
        
        .card-content {
            padding: 1.75rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        
        .card-content h4 {
            font-size: 1.3rem;
            margin-bottom: 0.75rem;
            color: var(--charcoal);
            transition: color var(--transition-duration);
            line-height: 1.3;
        }
        
        .luxury-card:hover .card-content h4 {
            color: var(--primary-gold);
        }
        
        .card-content p {
            color: var(--light-text-light);
            margin-bottom: 1.5rem;
            line-height: 1.6;
            font-size: 0.95rem;
            flex: 1;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .card-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #f50c18 !important;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: all var(--transition-duration);
            position: relative;
            padding: 0.5rem 0;
            margin-top: auto;
            z-index: 2;
            flex-shrink: 0;
        }
        
        .card-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 1px;
            background: #f50c18 !important;
            transition: width var(--transition-duration) var(--transition-smooth), 
                       background var(--transition-duration) var(--transition-smooth);
        }
        
        .card-link:hover {
            color: #ff3333 !important;
        }
        
        .card-link:hover::after {
            width: 100%;
            background: #ff3333 !important;
        }
        
        .card-link i {
            font-size: 0.8rem;
            transition: transform var(--transition-duration) var(--transition-smooth);
            color: inherit;
        }
        
        .card-link:hover i {
            transform: translateX(4px);
        }
        
        /* Complementary Services – Dark Theme */
        .complementary-services-section {
            padding: 6rem 0;
            background: var(--charcoal);
            position: relative;
            overflow: hidden;
        }

        .complementary-services-section .section-subtitle {
            color: var(--primary-gold);
        }

        .complementary-services-section .section-title {
            color: white;
        }

        .complementary-services-section .section-title::after {
            background: var(--primary-gold);
        }

        .complementary-services-section .section-intro {
            color: rgba(255, 255, 255, 0.85);
        }
        
        .luxury-table-container {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            background: var(--light-charcoal);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            border: 1px solid rgba(212, 175, 55, 0.3);
        }
        
        .services-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: repeat(2, 1fr);
            gap: 2rem;
            margin-bottom: 2rem;
        }
        
        .service-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 2rem 1.5rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            border: 1px solid rgba(212, 175, 55, 0.3);
            transition: all var(--transition-duration) var(--transition-smooth);
            position: relative;
            z-index: 1;
            backdrop-filter: blur(10px);
        }
        
        .service-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
            border-color: var(--primary-gold);
            background: rgba(212, 175, 55, 0.12);
            z-index: 2;
        }
        
        .service-icon-wrapper {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, var(--primary-gold), var(--dark-gold));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--charcoal);
            font-size: 1.5rem;
            box-shadow: 0 5px 20px rgba(212, 175, 55, 0.4);
            transition: all var(--transition-duration) var(--transition-smooth);
            margin-bottom: 1.5rem;
        }
        
        .service-item:hover .service-icon-wrapper {
            transform: scale(1.1) rotate(5deg);
            box-shadow: 0 8px 25px rgba(212, 175, 55, 0.6);
            background: linear-gradient(135deg, var(--dark-gold), var(--primary-gold));
        }
        
        .service-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.3rem;
            color: white;
            margin-bottom: 0.5rem;
            font-weight: 600;
            line-height: 1.3;
        }

        .service-description {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.95rem;
            line-height: 1.5;
        }
        
        .table-footer-note {
            padding: 1.5rem;
            background: rgba(212, 175, 55, 0.1);
            border-radius: 12px;
            border-left: 4px solid var(--primary-gold);
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.9);
        }
        
        .text-gold {
            color: var(--primary-gold) !important;
        }
        
        /* Decorative Elements */
        .floating-element {
            position: absolute;
            z-index: 0;
            opacity: 0.1;
            pointer-events: none;
        }
        
        .floating-element.diamond {
            width: 100px;
            height: 100px;
            border: 2px solid var(--primary-gold);
            transform: rotate(45deg);
        }
        
        .floating-element.ring {
            width: 150px;
            height: 150px;
            border: 1px solid var(--primary-gold);
            border-radius: 50%;
        }
        
        .table-floating-element {
            position: absolute;
            z-index: 0;
            opacity: 0.05;
            pointer-events: none;
        }
        
        .table-floating-element.circle {
            width: 200px;
            height: 200px;
            border: 2px solid var(--primary-gold);
            border-radius: 50%;
            top: 10%;
            right: 5%;
        }
        
        .table-floating-element.diamond-small {
            width: 80px;
            height: 80px;
            border: 1px solid var(--primary-gold);
            transform: rotate(45deg);
            bottom: 20%;
            left: 5%;
        }
        
        /* Call to Action */
        .footer-cta {
            background: linear-gradient(135deg, var(--light-section) 0%, #f0f0f0 100%), 
                        url('data:image/svg+xml,<svg width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h20v20H0z" fill="none"/><path d="M10 3a7 7 0 100 14 7 7 0 000-14zm0 12a5 5 0 110-10 5 5 0 010 10z" fill="%23D4AF37" opacity=".1"/></svg>');
            color: var(--charcoal);
            padding: 5rem 0;
            text-align: center;
            position: relative;
            overflow: hidden;
            border-top: 1px solid var(--light-border);
        }
        
        .footer-cta h3 {
            font-size: 2.5rem;
            margin-bottom: 1.25rem;
            color: var(--charcoal);
        }
        
        .footer-cta p {
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto 2.5rem;
            opacity: 0.9;
            line-height: 1.6;
            color: var(--light-text-light);
        }
        
        .cta-button-gold {
            background: linear-gradient(135deg, var(--primary-gold), var(--dark-gold));
            color: white;
            border: none;
            padding: 1rem 2.5rem;
            font-size: 1rem;
            font-weight: 500;
            text-decoration: none;
            border-radius: 25px;
            transition: all var(--transition-duration) var(--transition-smooth);
            box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }
        
        .cta-button-gold:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(212, 175, 55, 0.4);
            background: linear-gradient(135deg, var(--dark-gold), var(--primary-gold));
            color: white;
        }
        
        /* Back to Top Button */
        .back-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary-gold), var(--dark-gold));
            color: white;
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            cursor: pointer;
            z-index: 99999;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
            transition: all var(--transition-duration) var(--transition-smooth);
            box-shadow: 0 5px 20px rgba(212, 175, 55, 0.5);
            pointer-events: auto;
            text-decoration: none;
            -webkit-tap-highlight-color: transparent;
        }
        
        .back-to-top.visible {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        
        .back-to-top:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.6);
            background: linear-gradient(135deg, var(--dark-gold), var(--primary-gold));
        }
        
        .back-to-top:active {
            transform: translateY(-2px);
        }
        
        .no-services {
            padding: 4rem 0;
            text-align: center;
        }
        
        .no-services p {
            font-size: 1.2rem;
            color: var(--light-text-light);
        }
        
        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            50% {
                transform: translateY(-15px) rotate(3deg);
            }
        }
        
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(25px);
            transition: opacity 0.6s var(--transition-smooth), transform 0.6s var(--transition-smooth);
        }
        
        .animate-on-scroll.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* ===== ALL FOOTER STYLES HAVE BEEN REMOVED ===== */
        /* Footer is now styled exclusively by /allpack/layout/css/footer.css */
        /* This eliminates 100% of duplicate CSS conflicts with Privacy Policy, Terms of Service, etc. */

        /* Responsive overrides (non‑footer) */
        @media (max-width: 1200px) {
            .hero-content h1 { font-size: 3.8rem; }
            .hero-content h1 span { font-size: 2.5rem; }
            .section-title { font-size: 2.8rem; }
            .services-section .row { --bs-gutter-x: 1.5rem; }
        }
        
        @media (max-width: 992px) {
            .luxury-hero { height: 75vh; min-height: 550px; }
            .hero-content h1 { font-size: 3.2rem; }
            .hero-content h1 span { font-size: 2.2rem; }
            .section-title { font-size: 2.5rem; }
            .card-icon { width: 45px; height: 45px; font-size: 1.2rem; }
            .complementary-services-section { padding: 5rem 0; }
            .luxury-table-container { padding: 1.5rem; border-radius: 15px; }
            .services-grid { grid-template-columns: repeat(2, 1fr); grid-template-rows: repeat(3, 1fr); gap: 1.5rem; }
