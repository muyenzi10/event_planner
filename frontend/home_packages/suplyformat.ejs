<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wedding Planner Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/home_packages/pablic/dashboard.css">
</head>
<body>
  <button class="sidebar-toggle" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
  </button>

  <div class="dashboard-container">
    <nav class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <h2><i class="fas fa-heart"></i> Wedding Planner</h2>
      </div>

      <div class="nav-links">
        <a href="#" class="nav-link"><i class="fas fa-home"></i> Dashboard</a>
        <a href="#" class="nav-link"><i class="fas fa-calendar-alt"></i> Calendar</a>
        <a href="/Dashboard/view/suppliers" class="nav-link active"><i class="fas fa-users"></i> Suppliers</a>
        <a href="/Dashboard/booking" class="nav-link"><i class="fas fa-bookmark"></i> Bookings</a>
        <a href="#" class="nav-link"><i class="fas fa-clipboard-list"></i> Tasks</a>
        <a href="#" class="nav-link"><i class="fas fa-file-invoice-dollar"></i> Invoices</a>
        <a href="#" class="nav-link"><i class="fas fa-cog"></i> Settings</a>
      </div>

      <div class="mt-auto text-center text-white-50 p-3" style="font-size: 13px;">
        &copy; <%= new Date().getFullYear() %> Wedding Planner Pro
      </div>
    </nav>

    <main class="main-content">
      <div class="header d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-users"></i> All Suppliers</h1>
        <a href="#" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Supplier</a>
      </div>

      <div class="table-container mt-4">
        <div class="scroll-hint">
          <i class="fas fa-arrow-down"></i> Scroll to view all data
        </div>

        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>Supplier</th>
              <th>Business</th>
              <th>Contact</th>
              <th>Location</th>
              <th>Service</th>
              <th>Experience</th>
              <th>Portfolio</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (!suppliers || suppliers.length === 0) { %>
              <tr>
                <td colspan="8" class="text-center text-muted">No suppliers found.</td>
              </tr>
            <% } else { %>
              <% suppliers.forEach(s => { %>
                <tr>
                  <!-- Full Name -->
                  <td><%= s.firstname %> <%= s.lastname %></td>

                  <!-- Business -->
                  <td><%= s.business || '—' %></td>

                  <!-- Contact -->
                  <td>
                    <div><%= s.email %></div>
                    <div class="text-muted small"><%= s.phone %></div>
                  </td>

                  <!-- Location -->
                  <td><%= s.location %></td>

                  <!-- Service -->
                  <td><%= s.service %></td>

                  <!-- Experience -->
                  <td><%= s.experience != null ? s.experience + ' yrs' : '—' %></td>

                  <!-- Portfolio -->
                  <td>
                    <% if (s.link) { %>
                      <a href="<%= s.link %>" target="_blank">View</a>
                    <% } else { %>
                      —
                    <% } %>
                  </td>

                  <!-- Actions -->
                  <td>
                    <a href="/Dashboard/suppliers/edit/<%=s._id%>" class="btn btn-sm btn-outline-warning">
              <i class="fas fa-pen"></i>
            </a>
                    <form action="/Dashboard/suppliers/delete/<%= s._id %>?_method=DELETE"
                  method="POST" style="display:inline;" 
                  onsubmit="return confirm('Delete this booking?');">
              <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
            </form>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script>
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('active');
    }

    setTimeout(() => {
      const hint = document.querySelector('.scroll-hint');
      if (hint) { hint.style.opacity = '0'; setTimeout(() => hint.remove(), 1000); }
    }, 5000);
  </script>
</body>
</html>
