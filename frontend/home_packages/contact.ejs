<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/allpack/layout/css/navbas.css">
    <link rel="stylesheet" href="/allpack/layout/css/footer.css">
    <style>
        :root {
            --primary-color: #d4af37;
            --dark-color: #222;
            --light-color: #fff;
            --muted-color: #f8f4f0;
            --pink-primary: #e91e63;
            --pink-dark: #c2185b;
            --pink-light: #fffafc;
            --success: #10B981;
            --error: #EF4444;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--muted-color);
            color: var(--dark-color);
            line-height: 1.6;
        }
        
        /* Contact Section */
        .contact-section {
            padding: 100px 0 60px;
            min-height: auto;
            display: flex;
            align-items: flex-start;
            background: linear-gradient(to bottom, var(--pink-light), #fff);
        }
        
        .contact-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            padding: 35px;
            animation: fadeIn 0.8s ease-out;
            margin-bottom: 20px;
        }
        
        .contact-card h2 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            color: var(--pink-primary);
            margin-bottom: 15px;
            position: relative;
            animation: slideInLeft 0.8s ease-out;
            font-size: 1.8rem;
        }
        
        .contact-card h2:after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 60px;
            height: 3px;
            background: var(--pink-primary);
            animation: expandWidth 1s ease-out 0.5s forwards;
            transform-origin: left;
            transform: scaleX(0);
        }
        
        .contact-card > p {
            margin-bottom: 25px;
            color: #666;
            font-size: 0.95rem;
        }
        
        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            box-shadow: none;
            border: 1px solid #ddd;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }
        
        .form-control:focus {
            border-color: var(--pink-primary);
            box-shadow: 0 0 5px rgba(233,30,99,0.4);
            transform: translateY(-2px);
        }
        
        .btn-send {
            background: var(--pink-primary);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 12px 25px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            font-weight: 500;
            font-size: 1rem;
        }
        
        .btn-send:hover {
            background: var(--pink-dark);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(233,30,99,0.4);
        }
        
        .btn-send:active {
            transform: translateY(-1px);
        }
        
        .btn-send:after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 5px;
            height: 5px;
            background: rgba(255, 255, 255, 0.5);
            opacity: 0;
            border-radius: 100%;
            transform: scale(1, 1) translate(-50%);
            transform-origin: 50% 50%;
        }
        
        .btn-send:focus:not(:active)::after {
            animation: ripple 1s ease-out;
        }
        
        .contact-info {
            padding: 30px;
            background: linear-gradient(135deg, var(--pink-primary), var(--pink-dark));
            border-radius: 20px;
            color: white;
            height: auto; /* Changed from 100% to auto */
            min-height: auto; /* Added */
            animation: slideInRight 0.8s ease-out;
            box-shadow: 0 10px 25px rgba(233,30,99,0.3);
            margin-top: 0;
            overflow-y: visible; /* Added */
        }
        
        .contact-info h4 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            margin-bottom: 20px;
            position: relative;
            animation: fadeIn 1s ease-out 0.3s both;
            font-size: 1.5rem;
        }
        
        .contact-info h4:after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 50px;
            height: 3px;
            background: white;
        }
        
        .contact-info p {
            margin-bottom: 18px;
            display: flex;
            align-items: flex-start;
            animation: fadeInUp 0.8s ease-out both;
            font-size: 0.95rem;
        }
        
        .contact-info p:nth-child(2) { animation-delay: 0.4s; }
        .contact-info p:nth-child(3) { animation-delay: 0.5s; }
        .contact-info p:nth-child(4) { animation-delay: 0.6s; }
        .contact-info p:nth-child(5) { animation-delay: 0.7s; }
        
        .contact-info i {
            margin-right: 12px;
            font-size: 1.1rem;
            margin-top: 2px;
            flex-shrink: 0;
            min-width: 20px;
        }
        
        .social-links {
            margin-top: 25px;
            animation: fadeIn 1s ease-out 0.8s both;
            margin-bottom: 0; /* Added */
        }
        
        .social-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 38px;
            height: 38px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            margin-right: 8px;
            color: white;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }
        
        .social-links a:hover {
            background: white;
            color: var(--pink-primary);
            transform: translateY(-5px);
        }
        
        .form-group {
            margin-bottom: 18px;
            animation: fadeInUp 0.8s ease-out both;
        }
        
        .form-group:nth-child(1) { animation-delay: 0.2s; }
        .form-group:nth-child(2) { animation-delay: 0.3s; }
        .form-group:nth-child(3) { animation-delay: 0.4s; }
        .form-group:nth-child(4) { animation-delay: 0.5s; }
        
        /* Flash Messages */
        .error-message {
            color: var(--error);
            background: #FEE2E2;
            padding: 0.9rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            animation: errorEnter 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            border-left: 4px solid var(--error);
            font-size: 0.9rem;
        }

        .success-message {
            color: #065F46;
            background: #D1FAE5;
            padding: 0.9rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            animation: errorEnter 0.4s ease;
            border-left: 4px solid var(--success);
            font-size: 0.9rem;
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(15px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        @keyframes expandWidth {
            from { transform: scaleX(0); }
            to { transform: scaleX(1); }
        }
        
        @keyframes ripple {
            0% {
                transform: scale(0, 0);
                opacity: 0.5;
            }
            100% {
                transform: scale(20, 20);
                opacity: 0;
            }
        }

        @keyframes errorEnter {
            0% { opacity: 0; transform: translateY(-10px); }
            100% { opacity: 1; transform: translateY(0); }
        }
        
        /* MOBILE OPTIMIZATIONS */
        @media (max-width: 992px) {
            .contact-section {
                padding: 90px 0 50px;
                align-items: stretch;
            }
            
            .contact-card {
                padding: 25px;
                margin-bottom: 25px;
            }
            
            .contact-info {
                margin-top: 0;
                padding: 25px;
                height: auto; /* Ensure auto height on mobile */
            }
        }
        
        @media (max-width: 768px) {
            .contact-section {
                padding: 80px 0 40px;
            }
            
            .contact-card h2 {
                font-size: 1.6rem;
            }
            
            .contact-info h4 {
                font-size: 1.4rem;
            }
            
            .contact-card > p {
                font-size: 0.9rem;
            }
            
            .form-control, .contact-info p {
                font-size: 0.9rem;
            }
            
            .btn-send {
                padding: 10px 20px;
                font-size: 0.95rem;
            }
            
            .contact-info {
                height: auto; /* Ensure auto height */
            }
        }
        
        @media (max-width: 576px) {
            .contact-section {
                padding: 70px 0 30px;
            }
            
            .contact-card {
                padding: 20px;
                border-radius: 15px;
                margin-bottom: 20px;
            }
            
            .contact-info {
                padding: 20px;
                border-radius: 15px;
                height: auto; /* Critical - allows content to determine height */
                margin-bottom: 0; /* Remove any bottom margin */
                overflow: visible; /* Ensure nothing gets cut off */
            }
            
            .contact-card h2 {
                font-size: 1.5rem;
                margin-bottom: 12px;
            }
            
            .contact-info h4 {
                font-size: 1.3rem;
                margin-bottom: 15px;
            }
            
            .contact-card > p {
                font-size: 0.85rem;
                margin-bottom: 20px;
            }
            
            .form-group {
                margin-bottom: 15px;
            }
            
            .form-label {
                font-size: 0.9rem;
                margin-bottom: 5px;
            }
            
            .form-control {
                padding: 10px 12px;
                font-size: 0.85rem;
            }
            
            .btn-send {
                padding: 10px 15px;
                font-size: 0.9rem;
            }
            
            .contact-info p {
                font-size: 0.85rem;
                margin-bottom: 15px;
            }
            
            .social-links {
                margin-top: 20px;
                margin-bottom: 0;
            }
            
            .social-links a {
                width: 35px;
                height: 35px;
                font-size: 0.85rem;
                margin-bottom: 0; /* Ensure no bottom margin */
            }
            
            .error-message, .success-message {
                padding: 0.8rem;
                font-size: 0.85rem;
            }
        }
        
        @media (max-width: 400px) {
            .contact-section {
                padding: 60px 0 20px;
            }
            
            .contact-card {
                padding: 15px;
            }
            
            .contact-info {
                padding: 18px;
                height: auto; /* Keep auto height */
            }
            
            .contact-card h2 {
                font-size: 1.4rem;
            }
            
            .contact-info h4 {
                font-size: 1.2rem;
            }
            
            .btn-send {
                padding: 8px 12px;
                font-size: 0.85rem;
            }
            
            .contact-info p {
                margin-bottom: 12px; /* Slightly reduce spacing */
            }
        }
        
        /* Extra small devices optimization */
        @media (max-width: 350px) {
            .contact-section {
                padding: 50px 0 15px;
            }
            
            .contact-card, .contact-info {
                padding: 12px;
                height: auto; /* Keep auto height */
            }
            
            .contact-card h2 {
                font-size: 1.3rem;
            }
            
            .contact-info h4 {
                font-size: 1.1rem;
            }
            
            .social-links a {
                width: 32px;
                height: 32px;
                margin-right: 6px;
            }
            
            .contact-info p {
                margin-bottom: 10px; /* Further reduce spacing */
                font-size: 0.8rem;
            }
        }

        /* Ensure the row doesn't constrain height on mobile */
        @media (max-width: 768px) {
            .row.justify-content-center.align-items-center {
                align-items: stretch !important;
            }
            
            /* Make sure both columns can expand naturally */
            .col-lg-6, .col-lg-5 {
                height: auto;
            }
        }
    </style>
</head>
<body>

   <%- include('../allpack/layout/navbar') %>

    <!-- Contact Section -->
    <section class="contact-section">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <!-- Form Card -->
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="contact-card">
                        <h2>We'd Love To Hear From You</h2>
                        <p class="mb-4">Share your vision with us and let's create the perfect day together. Fill out the form and we'll get back to you within 24 hours.</p>

                        <!-- Flash Messages (Only shown when server provides them) -->
                        <% if (success_msg && success_msg.length > 0) { %>
                            <div class="success-message">
                                <%= success_msg %>
                            </div>
                        <% } %>

                        <% if (error_msg && error_msg.length > 0) { %>
                            <div class="error-message">
                                <%= error_msg %>
                            </div>
                        <% } %>

                        <form id="contactForm" action="/contact" method="POST">
                            <div class="form-group">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" id="name" name="name" class="form-control" required value="<%= typeof oldData !== 'undefined' ? oldData.name : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" id="email" name="email" class="form-control" required value="<%= typeof oldData !== 'undefined' ? oldData.email : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="text" id="phone" name="phone" class="form-control" required value="<%= typeof oldData !== 'undefined' ? oldData.phone : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="message" class="form-label">Your Wedding Vision</label>
                                <textarea id="message" name="message" rows="4" class="form-control" placeholder="Tell us about your dream wedding..." required><%= typeof oldData !== 'undefined' ? oldData.message : '' %></textarea>
                            </div>

                            <button type="submit" class="btn btn-send w-100">Begin Your Journey</button>
                        </form>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-5">
                    <div class="contact-info">
                        <h4>Contact Information</h4>
                        <p><i class="fas fa-map-marker-alt"></i> Kigali, Rwanda</p>
                        <p><i class="fas fa-phone"></i> +250 780 000 111</p>
                        <p><i class="fas fa-envelope"></i> info@dreamdayevents.com</p>
                        <p><i class="fas fa-clock"></i> Mon - Sat: 9:00 AM - 6:00 PM</p>

                        <div class="social-links">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form submission animation
        document.getElementById('contactForm').addEventListener('submit', function() {
            const button = this.querySelector('button');
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
            button.style.backgroundColor = '#c2185b';
        });

        // Form focus animation
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', () => {
                input.parentElement.style.transform = 'translateY(-5px)';
            });
            input.addEventListener('blur', () => {
                input.parentElement.style.transform = 'translateY(0)';
            });
        });
        
        // Mobile optimization - adjust textarea rows for smaller screens
        function adjustTextareaRows() {
            const textarea = document.getElementById('message');
            if (window.innerWidth < 576) {
                textarea.rows = 3;
            } else {
                textarea.rows = 4;
            }
        }
        
        // Run on load and resize
        window.addEventListener('load', adjustTextareaRows);
        window.addEventListener('resize', adjustTextareaRows);
    </script>
</body>
</html>