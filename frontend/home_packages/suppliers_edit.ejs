<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Supplier | Event Planner Pro</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #6a11cb;
      --secondary: #4361ee;
      --light: #f8f9fa;
      --dark: #212529;
    }

    body {
      background: linear-gradient(135deg, #f5f7fa, #e4e7f1);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* ===== Sidebar ===== */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 240px;
      background: var(--dark);
      padding-top: 70px; /* unified spacing */
      transform: translateX(-100%);
      transition: transform .3s ease;
      z-index: 1000;
    }
    .sidebar.active { transform: translateX(0); }

    .sidebar a {
      display: block;
      padding: 12px 20px;
      color: #fff;
      text-decoration: none;
      transition: background .3s;
    }
    .sidebar a:hover,
    .sidebar a.active { background: rgba(255,255,255,0.1); }

    /* Toggle Button */
    .sidebar-toggle {
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1100; /* ensure above overlay */
      background: var(--primary);
      border: none;
      color: #fff;
      padding: 8px 12px;
      border-radius: 8px;
      cursor: pointer;
    }

    /* Overlay for mobile */
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      opacity: 0;
      visibility: hidden;
      transition: opacity .3s ease;
      z-index: 900;
    }
    .overlay.active {
      opacity: 1;
      visibility: visible;
    }

    /* ===== Form Card ===== */
    .card-form {
      background: white;
      border-radius: 18px;
      box-shadow: 0 12px 40px rgba(0,0,0,0.08);
      margin-top: 30px;
      transition: all 0.3s ease-in-out;
    }
    .card-form:hover {
      transform: translateY(-5px);
      box-shadow: 0 18px 50px rgba(0,0,0,0.12);
    }

    .form-header {
      background: linear-gradient(270deg, var(--primary), var(--secondary));
      color: white;
      padding: 25px 30px;
      border-radius: 18px 18px 0 0;
    }
    .form-label {
      font-weight: 600;
      color: var(--dark);
      display: flex;
      align-items: center;
    }
    .form-label i { margin-right: 8px; color: var(--secondary); }

    .btn-success {
      background: linear-gradient(to right, var(--primary), var(--secondary));
      border: none;
      color: white;
      border-radius: 8px;
      font-weight: 600;
      padding: 10px 20px;
      transition: all 0.3s ease;
    }
    .btn-success:hover { background: linear-gradient(to right, #5a0db9, #3250d8); }
    .btn-secondary { border-radius: 8px; }

    @media (min-width: 768px) {
      .sidebar { transform: translateX(0); }
      .overlay { display: none; }
      body { margin-left: 240px; }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <button class="sidebar-toggle" aria-label="Toggle sidebar">
    <i class="fas fa-bars"></i>
  </button>
  <nav class="sidebar">
    <a href="/Dashboard/booking"><i class="fas fa-calendar-alt me-2"></i>Bookings</a>
    <a href="/Dashboard/view/suppliers" class="active"><i class="fas fa-users me-2"></i>Suppliers</a>
    <!-- add more links as needed -->
  </nav>
  <div class="overlay"></div>

  <!-- Main Content -->
  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card-form">
          <div class="form-header">
            <h2><i class="fas fa-user-edit me-2"></i>Edit Supplier</h2>
            <p class="mb-0">Update supplier information below</p>
          </div>

          <div class="p-4">
            <form action="/Dashboard/suppliers/update/<%= readsup._id %>?_method=PUT" method="POST">
              <!-- First & Last Name -->
              <div class="row mb-3">
                <div class="col">
                  <label class="form-label"><i class="fas fa-user"></i>First Name</label>
                  <input type="text" name="firstname" value="<%= readsup.firstname %>" class="form-control" required>
                </div>
                <div class="col">
                  <label class="form-label"><i class="fas fa-user"></i>Last Name</label>
                  <input type="text" name="lastname" value="<%= readsup.lastname %>" class="form-control" required>
                </div>
              </div>

              <!-- Email & Phone -->
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label"><i class="fas fa-envelope"></i>Email</label>
                  <input type="email" name="email" value="<%= readsup.email %>" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label class="form-label"><i class="fas fa-phone"></i>Phone</label>
                  <input type="text" name="phone" value="<%= readsup.phone %>" class="form-control" required>
                </div>
              </div>

              <!-- Business & Location -->
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label"><i class="fas fa-briefcase"></i>Business</label>
                  <input type="text" name="business" value="<%= readsup.business %>" class="form-control">
                </div>
                <div class="col-md-6">
                  <label class="form-label"><i class="fas fa-map-marker-alt"></i>Location</label>
                  <input type="text" name="location" value="<%= readsup.location %>" class="form-control" required>
                </div>
              </div>

              <!-- Service & Experience -->
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label"><i class="fas fa-concierge-bell"></i>Service</label>
                  <input type="text" name="service" value="<%= readsup.service %>" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label class="form-label"><i class="fas fa-star"></i>Experience (years)</label>
                  <input type="number" name="experience" value="<%= readsup.experience %>" class="form-control">
                </div>
              </div>

              <!-- Portfolio Link -->
              <div class="mb-3">
                <label class="form-label"><i class="fas fa-link"></i>Portfolio Link</label>
                <input type="text" name="link" value="<%= readsup.link %>" class="form-control">
              </div>

              <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i>Update Supplier</button>
                <a href="/Dashboard/view/suppliers" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const toggleBtn = document.querySelector('.sidebar-toggle');
    const sidebar  = document.querySelector('.sidebar');
    const overlay  = document.querySelector('.overlay');
    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('active');
      overlay.classList.toggle('active');
    });
    overlay.addEventListener('click', () => {
      sidebar.classList.remove('active');
      overlay.classList.remove('active');
    });
  </script>
</body>
</html>
