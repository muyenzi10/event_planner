    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function() {
            'use strict';

            // Light Parallax
            const bg = document.querySelector('.booking-hero-background');
            if (bg) {
                let ticking = false;
                window.addEventListener('scroll', () => {
                    if (!ticking) {
                        window.requestAnimationFrame(() => {
                            const scrolled = window.scrollY;
                            bg.style.transform = `translateY(${scrolled * 0.12}px)`;
                            ticking = false;
                        });
                        ticking = true;
                    }
                }, { passive: true });
            }

            // Form validation & submission
            const form = document.getElementById('weddingBookingForm');
            const successAlert = document.getElementById('bookingSuccessAlert');
            const submitBtn = document.getElementById('bookingSubmitBtn');
            const spinner = submitBtn.querySelector('.booking-spinner');
            const btnText = submitBtn.querySelector('.btn-text');

            function showError(inputId, message) {
                const input = document.getElementById(inputId);
                const errorDiv = document.getElementById(`error-${inputId}`);
                if (input) input.classList.add('error');
                if (errorDiv) errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
            }

            function clearError(inputId) {
                const input = document.getElementById(inputId);
                const errorDiv = document.getElementById(`error-${inputId}`);
                if (input) input.classList.remove('error');
                if (errorDiv) errorDiv.innerHTML = '';
            }

            const allInputs = form.querySelectorAll('.booking-form-input, .booking-form-select');
            allInputs.forEach(input => {
                input.addEventListener('input', function() { clearError(this.id); });
                input.addEventListener('change', function() { clearError(this.id); });
            });

            form.addEventListener('submit', async function(e) {
                e.preventDefault();

                document.querySelectorAll('.error-message').forEach(el => el.innerHTML = '');
                document.querySelectorAll('.booking-form-input, .booking-form-select').forEach(el => el.classList.remove('error'));

                const brideName = document.getElementById('brideFullName').value.trim();
                const groomName = document.getElementById('groomFullName').value.trim();
                const email = document.getElementById('email').value.trim();
                const phone = document.getElementById('phone').value.trim();
                const weddingDate = document.getElementById('weddingDate').value;
                const guests = document.getElementById('guestsNumber').value.trim();
                const weddingType = document.getElementById('weddingType').value;
                const location = document.getElementById('weddingLocation').value.trim();
                const vision = document.getElementById('weddingVision').value.trim();

                let isValid = true;

                if (!brideName) { showError('brideFullName', 'Bride’s full name is required'); isValid = false; }
                if (!groomName) { showError('groomFullName', 'Groom’s full name is required'); isValid = false; }
                
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!email) { showError('email', 'Email address is required'); isValid = false; }
                else if (!emailRegex.test(email)) { showError('email', 'Enter a valid email'); isValid = false; }

                if (!phone) { showError('phone', 'Phone number is required'); isValid = false; }
                else if (phone.replace(/\D/g, '').length < 10) { showError('phone', 'Enter a valid phone number (≥10 digits)'); isValid = false; }

                if (!weddingDate) { showError('weddingDate', 'Please select your wedding date'); isValid = false; }

                if (!guests) { showError('guestsNumber', 'Estimated guests is required'); isValid = false; }
                else if (parseInt(guests) < 1) { showError('guestsNumber', 'Must be at least 1 guest'); isValid = false; }

                if (!weddingType) { showError('weddingType', 'Please select a wedding style'); isValid = false; }

                if (!isValid) {
                    const firstError = document.querySelector('.error');
                    if (firstError) firstError.focus({ preventScroll: false });
                    return;
                }

                spinner.style.display = 'inline-block';
                btnText.style.opacity = '0.7';
                submitBtn.disabled = true;

                try {
                    const formData = {
                        brideName, groomName, email, phone, weddingDate,
                        guestsNumber: guests, weddingType,
                        weddingLocation: location, weddingVision: vision
                    };

                    const response = await fetch('/booking/submit', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (response.ok) {
                        form.style.display = 'none';
                        successAlert.style.display = 'flex';
                        successAlert.setAttribute('aria-hidden', 'false');
                        successAlert.focus({ preventScroll: true });
                        
                        setTimeout(() => {
                            form.reset();
                            form.style.display = 'block';
                            successAlert.style.display = 'none';
                            successAlert.setAttribute('aria-hidden', 'true');
                        }, 5000);
                    } else {
                        alert('Submission failed: ' + (result.message || 'Please try again.'));
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Network error. Please check your connection.');
                } finally {
                    spinner.style.display = 'none';
                    btnText.style.opacity = '1';
                    submitBtn.disabled = false;
                }
            });

            // ---------- FIXED SCROLL INDICATOR ----------
            const scrollBtn = document.getElementById('bookingScrollBtn');
            const heroSection = document.querySelector('.booking-hero-section');
            
            function toggleScrollIndicator() {
                if (!heroSection || !scrollBtn) return;
                const heroBottom = heroSection.getBoundingClientRect().bottom;
                // Hide only when the hero section has completely left the viewport
                scrollBtn.classList.toggle('hidden', heroBottom <= 0);
            }

            window.addEventListener('scroll', toggleScrollIndicator, { passive: true });
            window.addEventListener('resize', toggleScrollIndicator);
            // Call once after layout is ready – ensures correct initial state
            requestAnimationFrame(toggleScrollIndicator);

            if (scrollBtn) {
                scrollBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const formSection = document.getElementById('booking-form');
                    if (formSection) formSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            }

            document.querySelectorAll('a[href^="#"]').forEach(el => {
                el.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (!targetId || targetId === '#') return;
                    const target = document.querySelector(targetId);
                    if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            });
        })();
    </script>
