<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wedding Planner - Bookings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/home_packages/pablic/dashboard.css">
</head>
<body>
  <!-- Sidebar Toggle Button -->
  <button class="sidebar-toggle" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
  </button>
  
  <div class="dashboard-container">
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <h2><i class="fas fa-heart"></i> Wedding Planner</h2>
      </div>
      
      <div class="nav-links">
        <a href="#" class="nav-link">
          <i class="fas fa-home"></i> Dashboard
        </a>
        <a href="#" class="nav-link">
          <i class="fas fa-calendar-alt"></i> Calendar
        </a>
        <a href="/Dashboard/suppliers" class="nav-link">
          <i class="fas fa-users"></i> Suppliers
        </a>
        <a href="/Dashboard/booking" class="nav-link active">
          <i class="fas fa-bookmark"></i> Bookings
        </a>
        <a href="#" class="nav-link">
          <i class="fas fa-clipboard-list"></i> Tasks
        </a>
        <a href="#" class="nav-link">
          <i class="fas fa-file-invoice-dollar"></i> Invoices
        </a>
        <a href="#" class="nav-link">
          <i class="fas fa-cog"></i> Settings
        </a>
      </div>
      
      <div class="mt-auto text-center text-white-50 p-3" style="font-size: 13px;">
        &copy; 2023 Wedding Planner Pro
      </div>
    </nav>
    
    <!-- Main Content -->
    <main class="main-content">
      <div class="header">
        <h1><i class="fas fa-users"></i> All Booking</h1>
        <a href="/add" class="btn btn-primary">Add New Booking</a>
      </div>
      <div class="table-container">
        <div class="scroll-hint">
          <i class="fas fa-arrow-down"></i> Scroll to view all data
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Couple</th>
              <th>Contact</th>
              <th>Wedding Date</th>
              <th>Guests</th>
              <th>Wedding Style</th>
              <th>Location</th>
              <th>wedding Vision</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% bookings.forEach(booking => { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar me-3">
                      <div style="width:40px; height:40px; background:linear-gradient(45deg, #6a11cb, #2575fc); border-radius:50%; display:flex; align-items:center; justify-content:center; color:white; font-weight:bold;">
                        <%= booking.firstname.charAt(0).toUpperCase() + booking.lastname.charAt(0).toUpperCase() %>
                      </div>
                    </div>
                    <div>
                      <div class="fw-bold"><%= booking.firstname %> <%= booking.lastname %></div>
                    </div>
                  </div>
                </td>
                
                <td><%= booking.email %> <br> <%= booking.phone %></td>
                <td><%= new Date(booking.weddingDate).toDateString() %></td>
                <td><%= booking.guestsNumber %></td>
                <td><%= booking.weddingType %></td>
                <td><%= booking.weddingLocation %></td>
             
                
                <td style="min-width: 240px;">
                  <textarea class="form-control"
                            rows="4"
                            readonly
                            style="
                              resize: vertical;
                              width: 100%;
                              font-size: 1rem;              
                              line-height: 1.6;             
                              padding: 10px 12px;
                              border-radius: 10px;
                              background-color: #fdfdfd;
                              color: #333;
                              font-weight: 500;            
                              box-shadow: inset 0 1px 2px rgba(0,0,0,0.05);
                            "><%= booking.weddingVision || 'No notes provided.' %></textarea>
                </td>
                
                
                <td><span class="badge bg-success">Confirmed</span></td>
          
                <td>
                  <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                  <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                </td>
              </tr>
            <% }) %>
          
        </table>
      </div>
      
      <div class="table-footer">
        <div class="text-muted">Showing 1 to 10 of 24 bookings</div>
        <nav>
          <ul class="pagination mb-0">
            <li class="page-item disabled"><a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a></li>
          </ul>
        </nav>
      </div>
    </main>
  </div>
  
  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('active');
    }
    
    // Auto-hide scroll hint after 5 seconds
    setTimeout(() => {
      const hint = document.querySelector('.scroll-hint');
      if (hint) {
        hint.style.opacity = '0';
        setTimeout(() => hint.remove(), 1000);
      }
    }, 5000);
  </script>
</body>
</html>