            } else {
                body.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark-mode');
                updateToggleIcon('dark-mode');
            }
        });
        
        function updateToggleIcon(theme) {
            const icon = darkModeToggle.querySelector('i');
            const toggleText = darkModeToggle.querySelector('.toggle-text');
            
            if (theme === 'dark-mode') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
                toggleText.textContent = 'Light Mode';
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
                toggleText.textContent = 'Dark Mode';
            }
        }
        
        // Add smooth scrolling to all links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // SLIDER GALLERY JAVASCRIPT
        document.addEventListener('DOMContentLoaded', function() {
            const slides = document.querySelectorAll('.gallery-slide');
            const dots = document.querySelectorAll('.gallery-dot');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            let currentSlide = 0;
            const totalSlides = slides.length;
            let isAnimating = false;
            const slideDuration = 3000;
            
            function showSlide(n, direction = 1) {
                if (isAnimating) return;
                isAnimating = true;
                
                const currentActive = document.querySelector('.gallery-slide.active');
                if (currentActive) {
                    currentActive.classList.add('fade-out');
                }
                
                if (n >= totalSlides) {
                    n = 0;
                } else if (n < 0) {
                    n = totalSlides - 1;
                }
                
                setTimeout(() => {
                    slides.forEach(slide => {
                        slide.classList.remove('active', 'fade-out');
                    });
                    dots.forEach(dot => dot.classList.remove('active'));
                    
                    slides[n].classList.add('active');
                    dots[n].classList.add('active');
                    
                    currentSlide = n;
                    
                    prevBtn.disabled = currentSlide === 0;
                    nextBtn.disabled = currentSlide === totalSlides - 1;
                    
                    isAnimating = false;
                }, 1500);
            }
            
            nextBtn.addEventListener('click', () => {
                showSlide(currentSlide + 1, 1);
            });
            
            prevBtn.addEventListener('click', () => {
                showSlide(currentSlide - 1, -1);
            });
            
            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    const direction = index > currentSlide ? 1 : -1;
                    showSlide(index, direction);
                });
            });
            
            let slideInterval = setInterval(() => {
                showSlide(currentSlide + 1, 1);
            }, slideDuration);
            
            const slideshow = document.querySelector('.gallery-slideshow');
            slideshow.addEventListener('mouseenter', () => {
                clearInterval(slideInterval);
            });
            
            slideshow.addEventListener('mouseleave', () => {
                slideInterval = setInterval(() => {
                    showSlide(currentSlide + 1, 1);
                }, slideDuration);
            });
            
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                    showSlide(currentSlide - 1, -1);
                } else if (e.key === 'ArrowRight') {
                    showSlide(currentSlide + 1, 1);
                }
            });
            
            showSlide(0);
            
            // Video Gallery functionality
            const videoItems = document.querySelectorAll('.video-gallery-container');
            
            videoItems.forEach((item, index) => {
                const playBtn = item.querySelector('.video-play-btn');
                
                playBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    alert('Video ' + (index + 1) + ' would play here. In real site, this would open a video player.');
                });
            });
            
            console.log("Wedding Planner site fully loaded!");
        });
    </script>
