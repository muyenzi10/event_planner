<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Use allFiles for lightbox navigation - this contains ALL files across all pages
  const lightboxFiles = <%- JSON.stringify(allFiles || []) %>;
  let lbIndex = 0;
  const lbModalEl = document.getElementById('lightboxModal');
  const lbContainer = document.getElementById('lightboxMediaContainer');
  const lightboxSidebar = document.getElementById('lightboxSidebar');
  const lightboxBody = document.querySelector('.lightbox-body');
  const bsLBModal = new bootstrap.Modal(lbModalEl, {keyboard:true});

  // Lightbox UI elements
  const lightboxCounterMobile = document.getElementById('lightboxCounterMobile');
  const lightboxCounterDesktop = document.getElementById('lightboxCounterDesktop');
  const lightboxTitleMobile = document.getElementById('lightboxTitleMobile');
  const lightboxTitleDesktop = document.getElementById('lightboxTitleDesktop');
  const lightboxDescriptionMobile = document.getElementById('lightboxDescriptionMobile');
  const lightboxDescriptionDesktop = document.getElementById('lightboxDescriptionDesktop');

  function checkSidebarVisibility() {
    // Check if screen is wide enough for sidebar
    if (window.innerWidth >= 992) {
      lightboxSidebar.classList.add('active');
      lightboxBody.classList.add('with-sidebar');
    } else {
      lightboxSidebar.classList.remove('active');
      lightboxBody.classList.remove('with-sidebar');
    }
  }

  function updateLightboxUI() {
    const file = lightboxFiles[lbIndex];
    if (!file) return;
    
    // Update counters
    const counterText = `${lbIndex + 1} / ${lightboxFiles.length}`;
    lightboxCounterMobile.textContent = counterText;
    lightboxCounterDesktop.textContent = counterText;
    
    // Update titles and descriptions
    lightboxTitleMobile.textContent = file.title;
    lightboxTitleDesktop.textContent = file.title;
    lightboxDescriptionMobile.textContent = file.description;
    lightboxDescriptionDesktop.textContent = file.description;
  }

  function showLightbox(index){
    const file = lightboxFiles[index];
    if(!file) return;
    
    lbContainer.innerHTML = '';
    
    if(file.fileType==='image'){
      const img=document.createElement('img');
      img.src='/all_disk/decor_images/'+file.filePath;
      img.alt=file.title;
      lbContainer.appendChild(img);
    } else {
      const video=document.createElement('video');
      video.controls=true; 
      video.autoplay=true; 
      video.muted=false; 
      video.playsInline=true;
      
      const src=document.createElement('source');
      src.src='/all_disk/decor_images/'+file.filePath;
      src.type='video/'+file.filePath.split('.').pop();
      video.appendChild(src);
      lbContainer.appendChild(video);
      
      // Try to play the video
      video.play().catch(e => {
        console.log('Video autoplay failed:', e);
      });
    }
    
    updateLightboxUI();
    checkSidebarVisibility();
  }

  // Add click event to all gallery items
  document.querySelectorAll('.gallery-item').forEach(item => {
    item.addEventListener('click', (e) => {
      const mediaElement = item.querySelector('.card-media');
      lbIndex = parseInt(mediaElement.dataset.index, 10);
      showLightbox(lbIndex);
      bsLBModal.show();
    });
  });

  // Navigation arrows - now they navigate through ALL files
  document.querySelector('#lightboxModal .story-arrow.prev').addEventListener('click', () => {
    lbIndex = (lbIndex - 1 + lightboxFiles.length) % lightboxFiles.length; 
    showLightbox(lbIndex);
  });
  
  document.querySelector('#lightboxModal .story-arrow.next').addEventListener('click', () => {
    lbIndex = (lbIndex + 1) % lightboxFiles.length; 
    showLightbox(lbIndex);
  });

  // Keyboard navigation
  document.addEventListener('keydown', e => {
    if(!lbModalEl.classList.contains('show')) return;
    if(e.key === 'ArrowRight') document.querySelector('#lightboxModal .story-arrow.next').click();
    if(e.key === 'ArrowLeft') document.querySelector('#lightboxModal .story-arrow.prev').click();
    if(e.key === 'Escape') bsLBModal.hide();
  });

  // Touch/swipe navigation
  let startX = 0;
  lbContainer.addEventListener('touchstart', e => { 
    startX = e.touches[0].clientX; 
  }, {passive:true});
  
  lbContainer.addEventListener('touchend', e => {
    const endX = e.changedTouches[0].clientX;
    if(startX - endX > 50) document.querySelector('#lightboxModal .story-arrow.next').click();
    if(endX - startX > 50) document.querySelector('#lightboxModal .story-arrow.prev').click();
  });

  // Handle window resize
  window.addEventListener('resize', checkSidebarVisibility);

  // Clean up when modal is closed
  lbModalEl.addEventListener('hidden.bs.modal', () => {
    const v = lbContainer.querySelector('video');
    if(v){ 
      v.pause(); 
      v.currentTime = 0;
      v.removeAttribute('src');
      v.load(); 
    }
    lbContainer.innerHTML = '';
  });
</script>
